{% comment %}
  Announcement Bar Section - Rotating Messages
  Grunge Style - Customizable via Theme Editor
{% endcomment %}

{%- if section.settings.enable_bar -%}
<div class="announcement-bar" data-announcement-bar>
  <div class="announcement-content">
    {%- for block in section.blocks -%}
      <span class="announcement-text {% if forloop.first %}visible{% endif %}" data-announcement-text="{{ forloop.index0 }}">
        {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
        {%- else -%}
          {{ block.settings.text }}
        {%- endif -%}
      </span>
    {%- endfor -%}
  </div>
</div>

<style>
.announcement-bar {
  background: {{ section.settings.background_color }};
  color: {{ section.settings.text_color }};
  text-align: center;
  padding: 10px 20px;
  font-size: 0.8rem;
  font-weight: 600;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 99;
  height: var(--announcement-bar-height, 36px);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.announcement-content {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.announcement-text {
  position: absolute;
  opacity: 0;
  transform: translateY(5px);
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.announcement-text.visible {
  opacity: 1;
  transform: translateY(0);
}

.announcement-text a {
  color: inherit;
  text-decoration: none;
}

.announcement-text a:hover {
  text-decoration: underline;
}

@media (max-width: 640px) {
  .announcement-bar {
    font-size: 0.7rem;
    padding: 8px 16px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const bar = document.querySelector('[data-announcement-bar]');
  if (!bar) return;

  const texts = bar.querySelectorAll('[data-announcement-text]');
  if (texts.length <= 1) return;

  let currentIndex = 0;
  const interval = {{ section.settings.rotation_speed | times: 1000 }};

  function rotateText() {
    texts[currentIndex].classList.remove('visible');
    currentIndex = (currentIndex + 1) % texts.length;
    texts[currentIndex].classList.add('visible');
  }

  setInterval(rotateText, interval);
});
</script>
{%- endif -%}

{% schema %}
{
  "name": "Announcement Bar",
  "tag": "section",
  "class": "announcement-bar-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_bar",
      "label": "Enable announcement bar",
      "default": true
    },
    {
      "type": "range",
      "id": "rotation_speed",
      "min": 2,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Rotation speed",
      "default": 4
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#f5f0e8"
    }
  ],
  "blocks": [
    {
      "type": "message",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Message text",
          "default": "Free shipping on all US orders"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "blocks": [
        {
          "type": "message",
          "settings": {
            "text": "Free shipping on all US orders"
          }
        },
        {
          "type": "message",
          "settings": {
            "text": "New vintage drops every week"
          }
        },
        {
          "type": "message",
          "settings": {
            "text": "Follow us @forgottenessentials"
          }
        }
      ]
    }
  ]
}
{% endschema %}
