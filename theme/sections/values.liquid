{% comment %}
  Values Section - Converted from Home.tsx values section
{% endcomment %}

<section class="values">
  <div class="values-grid">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        <div class="value-item" {{ block.shopify_attributes }}>
          {% case block.settings.icon %}
            {% when 'shield' %}
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
                <path d="m9 12 2 2 4-4"/>
              </svg>
            {% when 'cloud' %}
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17.5 19H9a7 7 0 1 1 6.71-9h1.79a4.5 4.5 0 1 1 0 9Z"/>
              </svg>
            {% when 'heart' %}
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
              </svg>
            {% when 'credit-card' %}
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <rect width="20" height="14" x="2" y="5" rx="2"/>
                <line x1="2" x2="22" y1="10" y2="10"/>
              </svg>
          {% endcase %}
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    {% else %}
      {% comment %} Placeholder values when no blocks exist {% endcomment %}
      <div class="value-item placeholder">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
          <path d="m9 12 2 2 4-4"/>
        </svg>
        <h3>Value Title</h3>
        <p>Add value propositions to highlight what makes your store special.</p>
      </div>
      <div class="value-item placeholder">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
          <path d="M17.5 19H9a7 7 0 1 1 6.71-9h1.79a4.5 4.5 0 1 1 0 9Z"/>
        </svg>
        <h3>Value Title</h3>
        <p>Add value propositions to highlight what makes your store special.</p>
      </div>
      <div class="value-item placeholder">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
        </svg>
        <h3>Value Title</h3>
        <p>Add value propositions to highlight what makes your store special.</p>
      </div>
      <div class="value-item placeholder">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
          <rect width="20" height="14" x="2" y="5" rx="2"/>
          <line x1="2" x2="22" y1="10" y2="10"/>
        </svg>
        <h3>Value Title</h3>
        <p>Add value propositions to highlight what makes your store special.</p>
      </div>
    {% endif %}
  </div>
</section>

<style>
.values {
  max-width: 100%;
  margin: 0 auto;
  padding: 4rem 3rem;
  border-top: 2px solid var(--color-border);
}

.values-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2rem;
  text-align: center;
}

.value-item svg {
  margin-bottom: 1rem;
  stroke-width: 1;
}

.value-item h3 {
  font-size: 0.875rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  margin: 0 0 0.5rem;
}

.value-item p {
  font-size: 0.85rem;
  color: var(--color-muted);
  line-height: 1.6;
}

.value-item.placeholder {
  opacity: 0.5;
}

@media (max-width: 1024px) {
  .values-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 640px) {
  .values {
    padding: 3rem 1rem;
  }

  .values-grid {
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }
}
</style>

{% schema %}
{
  "name": "Values",
  "tag": "section",
  "class": "values",
  "settings": [
    {
      "type": "header",
      "content": "Section Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "info": "Optional heading above value propositions"
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show Heading",
      "default": false
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "values_per_row",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Values Per Row",
      "default": 4,
      "info": "Number of value items displayed per row on desktop"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 60
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "checkbox",
      "id": "enable_border_top",
      "label": "Enable Top Border",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_border_bottom",
      "label": "Enable Bottom Border",
      "default": false
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Value",
      "limit": 8,
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "shield",
              "label": "Shield (Authenticated)"
            },
            {
              "value": "cloud",
              "label": "Cloud (Sustainable)"
            },
            {
              "value": "heart",
              "label": "Heart (Curated)"
            },
            {
              "value": "credit-card",
              "label": "Credit Card (Secure)"
            }
          ],
          "default": "shield"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Value Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Value description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Values",
      "settings": {
        "values_per_row": 4,
        "enable_border_top": true
      },
      "blocks": [
        {
          "type": "value",
          "settings": {
            "icon": "shield",
            "title": "Authenticated",
            "description": "Every piece verified for authenticity by our expert team."
          }
        },
        {
          "type": "value",
          "settings": {
            "icon": "cloud",
            "title": "Sustainable",
            "description": "Extending the lifecycle of beautiful clothing, one piece at a time."
          }
        },
        {
          "type": "value",
          "settings": {
            "icon": "heart",
            "title": "Curated",
            "description": "Only the finest pieces make it into our collection."
          }
        },
        {
          "type": "value",
          "settings": {
            "icon": "credit-card",
            "title": "Secure Checkout",
            "description": "Shop confidently with our secure payment processing."
          }
        }
      ]
    }
  ]
}
{% endschema %}
