{% comment %}
  About Story Section - Image + content grid
{% endcomment %}

<section class="about-story">
  <div class="story-grid">
    <div class="story-image">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | img_url: '800x' }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
        />
      {% else %}
        <div class="story-image-placeholder">
          <p>Story Image</p>
        </div>
      {% endif %}
    </div>
    <div class="story-content">
      <h2>{{ section.settings.heading }}</h2>
      <div class="story-text">
        {{ section.settings.content }}
      </div>
    </div>
  </div>
</section>

<style>
.about-story {
  max-width: 1400px;
  margin: 0 auto;
  padding: 4rem 3rem;
}

.story-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.story-image img {
  width: 100%;
  height: 500px;
  object-fit: cover;
}

.story-image-placeholder {
  width: 100%;
  height: 500px;
  background: rgb(var(--color-base-background-2));
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgb(var(--color-muted));
}

.story-content h2 {
  font-size: 1.75rem;
  font-weight: 400;
  margin: 0 0 1.5rem;
  letter-spacing: -0.01em;
}

.story-text {
  font-size: 0.95rem;
  line-height: 1.8;
  color: rgb(var(--color-muted));
}

.story-text p {
  margin-bottom: 1.25rem;
}

@media (max-width: 1024px) {
  .story-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .story-image img,
  .story-image-placeholder {
    height: 400px;
  }
}

@media (max-width: 768px) {
  .about-story {
    padding: 3rem 2rem;
  }
}
</style>

{% schema %}
{
  "name": "About Story",
  "tag": "section",
  "class": "about-story-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Story Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "A Passion for the Past"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>We're dedicated to giving exceptional vintage and pre-loved clothing a second life, connecting discerning shoppers with garments that tell a story.</p><p>Every item in our collection is hand-selected for its quality, condition, and timeless appeal.</p>"
    }
  ],
  "presets": [
    {
      "name": "About Story"
    }
  ]
}
{% endschema %}
