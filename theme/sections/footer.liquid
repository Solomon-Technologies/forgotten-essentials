{% comment %}
  Footer Section - Grunge Style with Newsletter
  Newsletter signup, navigation links, social icons and copyright
{% endcomment %}

<footer class="footer">
  <div class="footer-container">
    <!-- Newsletter Section -->
    <div class="footer-newsletter">
      <h3>{{ section.settings.newsletter_title | default: 'Join the Club' }}</h3>
      <p>{{ section.settings.newsletter_text | default: 'Get early access to new drops, exclusive deals, and vintage finds delivered to your inbox.' }}</p>

      {% form 'customer', class: 'newsletter-form' %}
        {{ form.errors | default_errors }}
        {% if form.posted_successfully? %}
          <div class="newsletter-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            <span>You're in! Check your inbox for a welcome surprise.</span>
          </div>
        {% else %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input
            type="email"
            name="contact[email]"
            placeholder="{{ section.settings.newsletter_placeholder | default: 'Enter your email' }}"
            required
            autocomplete="email"
          >
          <button type="submit">{{ section.settings.newsletter_button | default: 'Subscribe' }}</button>
        {% endif %}
      {% endform %}
    </div>

    <!-- Footer Links -->
    <div class="footer-links">
      <div class="footer-column">
        <h4>Shop</h4>
        <a href="{{ routes.all_products_collection_url }}">All Products</a>
        <a href="{{ routes.collections_url }}">Collections</a>
        <a href="/collections/new-arrivals">New Arrivals</a>
      </div>
      <div class="footer-column">
        <h4>Help</h4>
        <a href="/pages/about">About Us</a>
        <a href="/pages/contact">Contact</a>
        <a href="/pages/faq">FAQ</a>
      </div>
      <div class="footer-column">
        <h4>Account</h4>
        {% if customer %}
          <a href="{{ routes.account_url }}">My Account</a>
          <a href="/pages/wishlist">Saved Items</a>
          <a href="{{ routes.account_logout_url }}">Sign Out</a>
        {% else %}
          <a href="{{ routes.account_login_url }}">Sign In</a>
          <a href="{{ routes.account_register_url }}">Create Account</a>
          <a href="/pages/wishlist">Saved Items</a>
        {% endif %}
      </div>
    </div>

    <!-- Social Links -->
    <div class="footer-social">
      {% if section.settings.social_instagram != blank %}
        <a
          href="{{ section.settings.social_instagram }}"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Instagram"
          class="social-link"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
      {% endif %}
      {% if section.settings.social_facebook != blank %}
        <a
          href="{{ section.settings.social_facebook }}"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Facebook"
          class="social-link"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
            <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
          </svg>
        </a>
      {% endif %}
      {% if section.settings.social_tiktok != blank %}
        <a
          href="{{ section.settings.social_tiktok }}"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="TikTok"
          class="social-link"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
            <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
          </svg>
        </a>
      {% endif %}
    </div>
    <p class="footer-copyright">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
  </div>
</footer>

<style>
.footer {
  background: var(--color-bg);
  padding: 4rem 3rem 2rem;
  margin-top: auto;
  border-top: 3px solid var(--color-border);
}

.footer-container {
  max-width: 1200px;
  margin: 0 auto;
}

/* Newsletter Section */
.footer-newsletter {
  text-align: center;
  max-width: 500px;
  margin: 0 auto 48px;
  padding-bottom: 48px;
  border-bottom: 2px solid var(--color-border);
}

.footer-newsletter h3 {
  font-family: var(--font-heading-family);
  font-size: 2rem;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: -0.02em;
  margin-bottom: 12px;
}

.footer-newsletter p {
  color: var(--color-muted);
  font-size: 0.95rem;
  line-height: 1.6;
  margin-bottom: 24px;
}

.newsletter-form {
  display: flex;
  gap: 0;
  max-width: 420px;
  margin: 0 auto;
}

.newsletter-form input[type="email"] {
  flex: 1;
  padding: 14px 18px;
  font-size: 1rem;
  border: 2px solid var(--color-ink, #1a1a1a);
  border-right: none;
  background: var(--color-cream, #f5f0e8);
  font-family: inherit;
}

.newsletter-form input[type="email"]:focus {
  outline: none;
  background: var(--color-paper, #fff);
}

.newsletter-form input[type="email"]::placeholder {
  color: var(--color-muted);
}

.newsletter-form button {
  padding: 14px 24px;
  font-size: 0.9rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  background: var(--color-ink, #1a1a1a);
  color: var(--color-cream, #f5f0e8);
  border: 2px solid var(--color-ink, #1a1a1a);
  cursor: pointer;
  transition: all 0.2s ease;
  white-space: nowrap;
}

.newsletter-form button:hover {
  background: var(--color-cream, #f5f0e8);
  color: var(--color-ink, #1a1a1a);
}

.newsletter-success {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  padding: 16px 24px;
  background: #dcfce7;
  color: #166534;
  font-weight: 600;
  font-size: 0.95rem;
  border: 2px solid #166534;
}

/* Footer Links */
.footer-links {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32px;
  margin-bottom: 48px;
  padding-bottom: 32px;
  border-bottom: 2px solid var(--color-border);
}

.footer-column h4 {
  font-family: var(--font-heading-family);
  font-size: 0.9rem;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  margin-bottom: 16px;
}

.footer-column a {
  display: block;
  color: var(--color-muted);
  font-size: 0.9rem;
  text-decoration: none;
  margin-bottom: 10px;
  transition: color 0.2s ease;
}

.footer-column a:hover {
  color: var(--color-ink, #1a1a1a);
}

/* Social Links */
.footer-social {
  display: flex;
  gap: 1.5rem;
  justify-content: center;
  margin-bottom: 1.5rem;
}

.social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  background: var(--color-text);
  color: var(--color-bg);
  border: 3px solid var(--color-text);
  border-radius: 0;
  transition: all 0.2s ease;
}

.social-link:hover {
  background: var(--color-bg);
  color: var(--color-text);
  transform: translateY(-2px);
}

.social-link svg {
  width: 24px;
  height: 24px;
}

.footer-copyright {
  font-size: 0.7rem;
  color: var(--color-muted);
  margin: 0;
  text-transform: none;
  letter-spacing: 0;
  text-align: center;
}

@media (max-width: 768px) {
  .footer {
    padding: 3rem 1.5rem 2rem;
  }

  .footer-newsletter h3 {
    font-size: 1.5rem;
  }

  .newsletter-form {
    flex-direction: column;
  }

  .newsletter-form input[type="email"] {
    border-right: 2px solid var(--color-ink, #1a1a1a);
    border-bottom: none;
  }

  .footer-links {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 24px;
  }
}

@media (max-width: 640px) {
  .social-link {
    width: 42px;
    height: 42px;
  }
}
</style>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "footer",
  "settings": [
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "Join the Club"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter Text",
      "default": "Get early access to new drops, exclusive deals, and vintage finds delivered to your inbox."
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Email Placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "newsletter_button",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "social_tiktok",
      "label": "TikTok URL"
    }
  ]
}
{% endschema %}
