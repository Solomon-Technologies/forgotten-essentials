{% comment %}
  Footer Section - Converted from React Footer.tsx
  Maintains exact design with 2px borders
{% endcomment %}

<footer class="footer">
  <div class="footer-container">
    <div class="footer-grid">
      <div class="footer-brand">
        <h2 class="footer-logo">{{ section.settings.footer_heading | default: 'FORGOTTEN ESSENTIALS' }}</h2>
        <p class="footer-description">
          {{ section.settings.footer_description | default: 'Thoughtfully sourced vintage and pre-loved clothing for the conscious consumer. Every piece tells a story.' }}
        </p>
        <div class="footer-social">
          {% if section.settings.social_instagram != blank %}
            <a href="{{ section.settings.social_instagram }}" aria-label="Instagram" target="_blank" rel="noopener noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
              </svg>
            </a>
          {% endif %}
          {% if section.settings.social_pinterest != blank %}
            <a href="{{ section.settings.social_pinterest }}" aria-label="Pinterest" target="_blank" rel="noopener noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <line x1="12" x2="12" y1="17" y2="22"></line>
                <path d="M5 17h14v-1.76a2 2 0 0 0-1.11-1.79l-1.78-.9A2 2 0 0 1 15 10.76V6h1a2 2 0 0 0 0-4H8a2 2 0 0 0 0 4h1v4.76a2 2 0 0 1-1.11 1.79l-1.78.9A2 2 0 0 0 5 15.24Z"></path>
              </svg>
            </a>
          {% endif %}
          {% if section.settings.social_tiktok != blank %}
            <a href="{{ section.settings.social_tiktok }}" aria-label="TikTok" target="_blank" rel="noopener noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"></path>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

      {% if linklists.shop.links.size > 0 %}
        <div class="footer-links">
          <h3>{{ linklists.shop.title }}</h3>
          <ul>
            {% for link in linklists.shop.links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        </div>
      {% else %}
        <div class="footer-links">
          <h3>Shop</h3>
          <ul>
            <li><a href="/collections/new-arrivals">New Arrivals</a></li>
            <li><a href="/collections/outerwear">Outerwear</a></li>
            <li><a href="/collections/dresses">Dresses</a></li>
            <li><a href="/collections/tops">Tops</a></li>
            <li><a href="/collections/bottoms">Bottoms</a></li>
            <li><a href="/collections/accessories">Accessories</a></li>
          </ul>
        </div>
      {% endif %}

      {% if linklists.about.links.size > 0 %}
        <div class="footer-links">
          <h3>{{ linklists.about.title }}</h3>
          <ul>
            {% for link in linklists.about.links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        </div>
      {% else %}
        <div class="footer-links">
          <h3>About</h3>
          <ul>
            <li><a href="/pages/about">Our Story</a></li>
            <li><a href="/pages/sustainability">Sustainability</a></li>
            <li><a href="/pages/consign">Sell With Us</a></li>
            <li><a href="/pages/contact">Contact</a></li>
          </ul>
        </div>
      {% endif %}

      {% if linklists.help.links.size > 0 %}
        <div class="footer-links">
          <h3>{{ linklists.help.title }}</h3>
          <ul>
            {% for link in linklists.help.links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        </div>
      {% else %}
        <div class="footer-links">
          <h3>Help</h3>
          <ul>
            <li><a href="/pages/faq">FAQ</a></li>
            <li><a href="/pages/shipping">Shipping & Returns</a></li>
            <li><a href="/pages/sizing">Size Guide</a></li>
            <li><a href="/pages/care">Care Instructions</a></li>
          </ul>
        </div>
      {% endif %}

      <div class="footer-newsletter">
        <h3>Stay in Touch</h3>
        <p>Subscribe for early access to new arrivals and exclusive offers.</p>
        {% form 'customer', class: 'newsletter-form' %}
          {% if form.posted_successfully? %}
            <p class="newsletter-success">Thanks for subscribing!</p>
          {% endif %}
          <input
            type="email"
            name="contact[email]"
            placeholder="Your email"
            aria-label="Email address"
            required
          />
          <button type="submit">Subscribe</button>
        {% endform %}
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      <div class="footer-legal">
        <a href="/pages/privacy-policy">Privacy Policy</a>
        <a href="/pages/terms-of-service">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>

<style>
.footer {
  background: var(--color-bg);
  padding: 4rem 3rem 2rem;
  margin-top: auto;
  border-top: 2px solid var(--color-border);
}

.footer-container {
  max-width: 100%;
  margin: 0 auto;
}

.footer-grid {
  display: grid;
  grid-template-columns: 1.5fr repeat(3, 1fr) 1.5fr;
  gap: 2rem;
  padding-bottom: 3rem;
  border-bottom: 2px solid var(--color-border);
}

.footer-brand {
  max-width: 250px;
}

.footer-logo {
  font-size: 0.875rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  margin: 0 0 1rem;
}

.footer-description {
  font-size: 0.85rem;
  line-height: 1.7;
  color: var(--color-muted);
  margin-bottom: 1.5rem;
}

.footer-social {
  display: flex;
  gap: 1rem;
}

.footer-social a {
  color: var(--color-text);
}

.footer-links h3,
.footer-newsletter h3 {
  font-size: 0.875rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  margin: 0 0 1rem;
}

.footer-links ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-links li {
  margin-bottom: 0.5rem;
}

.footer-links a {
  font-size: 0.875rem;
  color: var(--color-muted);
  text-decoration: none;
}

.footer-links a:hover {
  text-decoration: underline;
}

.footer-newsletter p {
  font-size: 0.85rem;
  color: var(--color-muted);
  line-height: 1.6;
  margin-bottom: 1rem;
}

.newsletter-form {
  display: flex;
  gap: 0;
}

.newsletter-success {
  color: green;
  font-size: 0.85rem;
  margin-bottom: 1rem;
}

.newsletter-form input {
  flex: 1;
  padding: 0.75rem 1rem;
  border: 1px solid var(--color-border);
  border-right: none;
  background: var(--color-bg);
  font-family: var(--font-sans);
  font-size: 0.85rem;
}

.newsletter-form input::placeholder {
  color: var(--color-muted);
}

.newsletter-form input:focus {
  outline: none;
  border-color: var(--color-text);
}

.newsletter-form button {
  padding: 0.75rem 1rem;
  background: var(--color-text);
  color: var(--color-bg);
  border: 2px solid var(--color-text);
  font-size: 0.875rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  cursor: pointer;
}

.footer-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 1.5rem;
}

.footer-bottom p {
  font-size: 0.75rem;
  color: var(--color-muted);
}

.footer-legal {
  display: flex;
  gap: 2rem;
}

.footer-legal a {
  font-size: 0.75rem;
  color: var(--color-muted);
  text-decoration: none;
}

.footer-legal a:hover {
  text-decoration: underline;
}

@media (max-width: 1024px) {
  .footer-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .footer-brand {
    grid-column: 1 / -1;
    max-width: 100%;
  }

  .footer-newsletter {
    grid-column: 1 / -1;
  }
}

@media (max-width: 640px) {
  .footer {
    padding: 3rem 1rem 1.5rem;
  }

  .footer-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .footer-bottom {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  .newsletter-form {
    flex-direction: column;
  }

  .newsletter-form input {
    border-right: 1px solid var(--color-border);
  }
}
</style>

