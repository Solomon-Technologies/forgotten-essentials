{% comment %}
  About CTA Section - Call to action at bottom of About page
{% endcomment %}

<section class="about-cta">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.description }}</p>
  <a href="{{ section.settings.button_link }}" class="btn-primary">
    {{ section.settings.button_text }}
  </a>
</section>

<style>
.about-cta {
  text-align: center;
  padding: 5rem 3rem;
  background: rgb(var(--color-base-background-2));
}

.about-cta h2 {
  font-size: 1.75rem;
  font-weight: 400;
  margin: 0 0 1rem;
  letter-spacing: -0.01em;
}

.about-cta p {
  font-size: 1rem;
  color: rgb(var(--color-muted));
  margin: 0 0 2rem;
}

.btn-primary {
  display: inline-block;
  padding: 0.875rem 2rem;
  background: rgb(var(--color-base-text));
  color: rgb(var(--color-base-background-1));
  font-size: 0.875rem;
  font-weight: 500;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  text-decoration: none;
  border: 1px solid rgb(var(--color-base-text));
  transition: all 0.2s ease;
}

.btn-primary:hover {
  background: transparent;
  color: rgb(var(--color-base-text));
}

@media (max-width: 768px) {
  .about-cta {
    padding: 4rem 2rem;
  }
}
</style>

{% schema %}
{
  "name": "About CTA",
  "tag": "section",
  "class": "about-cta-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Explore?"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Discover your next favorite piece in our carefully curated collection."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop the Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "About CTA"
    }
  ]
}
{% endschema %}
