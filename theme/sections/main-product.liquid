{% comment %}
  Main Product Section - Shopify 2.0
  Displays product details, gallery, and add to cart
{% endcomment %}

<div class="product-detail-wrapper">
  {% if section.settings.show_breadcrumbs %}
    <nav class="breadcrumb">
      <a href="/">Home</a>
      <span>/</span>
      <a href="/collections/all">Shop</a>
      <span>/</span>
      {% if product.collections.size > 0 %}
        <a href="{{ product.collections.first.url }}">{{ product.collections.first.title }}</a>
        <span>/</span>
      {% endif %}
      <span>{{ product.title }}</span>
    </nav>
  {% endif %}

  <div class="product-content">
    <!-- Image Gallery -->
    <div class="product-gallery">
      <div class="gallery-main" data-gallery-main>
        {% if product.featured_image %}
          <img
            src="{{ product.featured_image | img_url: 'large' }}"
            alt="{{ product.featured_image.alt | escape }}"
            data-main-image
            loading="eager"
          />
        {% endif %}
      </div>
      {% if section.settings.show_thumbnails and product.images.size > 1 %}
        <div class="gallery-thumbs">
          {% for image in product.images %}
            <button
              class="gallery-thumb {% if forloop.first %}active{% endif %}"
              data-gallery-thumb
              data-image-src="{{ image | img_url: 'large' }}"
            >
              <img src="{{ image | img_url: 'small' }}" alt="{{ image.alt | escape }}" />
            </button>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <!-- Product Info -->
    <div class="product-info">
      {% if product.metafields.custom.era %}
        <span class="product-era-badge">{{ product.metafields.custom.era }}</span>
      {% else %}
        <span class="product-era-badge">Vintage</span>
      {% endif %}

      <h1 class="product-title">{{ product.title }}</h1>

      <div class="product-pricing">
        <span class="product-price">{{ product.price | money_without_trailing_zeros }}</span>
        {% if product.compare_at_price > product.price %}
          <span class="product-original-price">{{ product.compare_at_price | money_without_trailing_zeros }}</span>
        {% endif %}
      </div>

      {% if product.description != blank %}
        <div class="product-description">
          {{ product.description }}
        </div>
      {% endif %}

      <div class="product-details">
        {% if product.metafields.custom.size %}
          <div class="detail-row">
            <span class="detail-label">Size</span>
            <span class="detail-value">{{ product.metafields.custom.size }}</span>
          </div>
        {% endif %}
        {% if product.metafields.custom.era %}
          <div class="detail-row">
            <span class="detail-label">Era</span>
            <span class="detail-value">{{ product.metafields.custom.era }}</span>
          </div>
        {% endif %}
        {% if product.metafields.custom.condition %}
          <div class="detail-row">
            <span class="detail-label">Condition</span>
            <span class="detail-value">{{ product.metafields.custom.condition }}</span>
          </div>
        {% endif %}
        {% if section.settings.show_vendor and product.vendor %}
          <div class="detail-row">
            <span class="detail-label">Brand</span>
            <span class="detail-value">{{ product.vendor }}</span>
          </div>
        {% endif %}
        {% if section.settings.show_sku and product.selected_or_first_available_variant.sku != blank %}
          <div class="detail-row">
            <span class="detail-label">SKU</span>
            <span class="detail-value">{{ product.selected_or_first_available_variant.sku }}</span>
          </div>
        {% endif %}
      </div>

      {% if section.settings.show_measurements and product.metafields.custom.measurements %}
        <div class="product-measurements">
          <h3>Measurements</h3>
          <div class="measurements-grid">
            {% assign measurements = product.metafields.custom.measurements | split: '|' %}
            {% for measurement in measurements %}
              {% assign parts = measurement | split: ':' %}
              <div class="measurement">
                <span class="measurement-label">{{ parts[0] }}</span>
                <span class="measurement-value">{{ parts[1] }}</span>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}

      {% form 'product', product, class: 'product-form', data-product-form: '' %}
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" />

        {% if product.variants.size > 1 %}
          <div class="product-variants">
            <label for="product-variant-select">Select Option</label>
            <select id="product-variant-select" name="id">
              {% for variant in product.variants %}
                <option
                  value="{{ variant.id }}"
                  {% if variant == product.selected_or_first_available_variant %}selected{% endif %}
                  {% unless variant.available %}disabled{% endunless %}
                >
                  {{ variant.title }} - {{ variant.price | money_without_trailing_zeros }}
                  {% unless variant.available %} (Sold Out){% endunless %}
                </option>
              {% endfor %}
            </select>
          </div>
        {% endif %}

        <button
          type="submit"
          class="btn-add-to-cart"
          {% unless product.available %}disabled{% endunless %}
          data-add-to-cart
        >
          {% if product.available %}
            Add to Cart
          {% else %}
            Sold Out
          {% endif %}
        </button>
      {% endform %}

      {% if section.settings.show_shipping_info %}
        <div class="product-perks">
          <div class="perk">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M21 10V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16v-2"/>
              <path d="m7.5 4.27 9 5.15"/>
              <polyline points="3.29,7 12,12 20.71,7"/>
              <line x1="12" x2="12" y1="22" y2="12"/>
            </svg>
            <span>Free shipping over $200</span>
          </div>
          <div class="perk">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/>
              <path d="M3 3v5h5"/>
            </svg>
            <span>14-day returns</span>
          </div>
          <div class="perk">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
              <path d="m9 12 2 2 4-4"/>
            </svg>
            <span>Authenticity guaranteed</span>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
.product-detail-wrapper {
  padding-top: 60px;
  max-width: 1400px;
  margin: 0 auto;
  padding-left: 2rem;
  padding-right: 2rem;
}

.breadcrumb {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 1.25rem 0;
  font-size: 0.75rem;
}

.breadcrumb a {
  color: var(--color-muted);
  text-decoration: none;
}

.breadcrumb a:hover {
  color: var(--color-text);
}

.breadcrumb span {
  color: var(--color-muted);
}

.breadcrumb span:last-child {
  color: var(--color-text);
}

.product-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  padding-bottom: 4rem;
}

.product-gallery {
  position: sticky;
  top: 80px;
  height: fit-content;
}

.gallery-main {
  aspect-ratio: 3 / 4;
  overflow: hidden;
  background: var(--color-cream);
  margin-bottom: 0.75rem;
}

.gallery-main img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.gallery-thumbs {
  display: flex;
  gap: 0.5rem;
}

.gallery-thumb {
  width: 70px;
  height: 90px;
  padding: 0;
  border: 1px solid transparent;
  background: var(--color-cream);
  cursor: pointer;
  overflow: hidden;
  transition: border-color 0.2s ease;
}

.gallery-thumb.active,
.gallery-thumb:hover {
  border-color: var(--color-text);
}

.gallery-thumb img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-info {
  padding-top: 0.5rem;
}

.product-era-badge {
  display: inline-block;
  font-size: 0.65rem;
  font-weight: 400;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  color: var(--color-muted);
  margin-bottom: 0.5rem;
}

.product-title {
  font-size: 1.5rem;
  font-weight: 400;
  line-height: 1.2;
  margin: 0 0 1rem;
  letter-spacing: -0.01em;
}

.product-pricing {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 1.5rem;
}

.product-price {
  font-size: 1.25rem;
  font-weight: 500;
}

.product-original-price {
  font-size: 1rem;
  color: var(--color-muted);
  text-decoration: line-through;
}

.product-description {
  font-size: 0.9rem;
  line-height: 1.8;
  color: var(--color-muted);
  margin-bottom: 2rem;
}

.product-details {
  border-top: 1px solid var(--color-border);
  border-bottom: 1px solid var(--color-border);
  padding: 1.25rem 0;
  margin-bottom: 1.5rem;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  padding: 0.35rem 0;
}

.detail-label {
  font-size: 0.85rem;
  color: var(--color-muted);
}

.detail-value {
  font-size: 0.85rem;
}

.product-measurements {
  margin-bottom: 2rem;
}

.product-measurements h3 {
  font-size: 0.7rem;
  font-weight: 500;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  margin: 0 0 1rem;
}

.measurements-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 0.75rem;
}

.measurement {
  text-align: center;
  padding: 0.75rem;
  background: var(--color-cream);
}

.measurement-label {
  display: block;
  font-size: 0.7rem;
  color: var(--color-muted);
  margin-bottom: 0.25rem;
}

.measurement-value {
  font-size: 0.9rem;
}

.product-variants {
  margin-bottom: 1.5rem;
}

.product-variants label {
  display: block;
  font-size: 0.75rem;
  font-weight: 500;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  margin-bottom: 0.5rem;
}

.product-variants select {
  width: 100%;
  padding: 0.875rem 1rem;
  border: 1px solid var(--color-border);
  background: var(--color-bg);
  font-family: var(--font-sans);
  font-size: 0.875rem;
  cursor: pointer;
}

.btn-add-to-cart {
  width: 100%;
  padding: 1rem;
  background: var(--color-text);
  color: var(--color-bg);
  border: 2px solid var(--color-text);
  font-size: 0.75rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  cursor: pointer;
  transition: all 0.2s ease;
  margin-bottom: 1.5rem;
}

.btn-add-to-cart:hover:not(:disabled) {
  background: transparent;
  color: var(--color-text);
}

.btn-add-to-cart:disabled {
  background: var(--color-muted);
  border-color: var(--color-muted);
  cursor: not-allowed;
}

.product-perks {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.perk {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-size: 0.8rem;
  color: var(--color-muted);
}

.perk svg {
  flex-shrink: 0;
  stroke-width: 1.5;
}

@media (max-width: 1024px) {
  .product-content {
    gap: 3rem;
  }
}

@media (max-width: 768px) {
  .product-detail-wrapper {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .product-content {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .product-gallery {
    position: static;
  }

  .product-title {
    font-size: 1.25rem;
  }

  .measurements-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 480px) {
  .breadcrumb {
    flex-wrap: wrap;
  }

  .gallery-thumb {
    width: 55px;
    height: 70px;
  }
}
</style>

{% schema %}
{
  "name": "Product Page",
  "tag": "section",
  "class": "main-product",
  "settings": [
    {
      "type": "header",
      "content": "Product Information"
    },
    {
      "type": "checkbox",
      "id": "show_breadcrumbs",
      "label": "Show Breadcrumbs",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Brand/Vendor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_sku",
      "label": "Show SKU",
      "default": false
    },
    {
      "type": "header",
      "content": "Image Gallery"
    },
    {
      "type": "checkbox",
      "id": "show_thumbnails",
      "label": "Show Image Thumbnails",
      "default": true,
      "info": "Display thumbnail navigation for multiple product images"
    },
    {
      "type": "checkbox",
      "id": "enable_image_zoom",
      "label": "Enable Image Zoom",
      "default": true,
      "info": "Allow users to zoom into product images"
    },
    {
      "type": "header",
      "content": "Product Details"
    },
    {
      "type": "checkbox",
      "id": "show_measurements",
      "label": "Show Measurements Section",
      "default": true,
      "info": "Display product measurements if available in metafields"
    },
    {
      "type": "checkbox",
      "id": "show_shipping_info",
      "label": "Show Shipping Information",
      "default": true,
      "info": "Display shipping, returns, and authenticity perks"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 1200,
      "max": 1600,
      "step": 100,
      "unit": "px",
      "label": "Maximum Content Width",
      "default": 1400
    }
  ]
}
{% endschema %}
