{% comment %}
  Instagram Feed Section - Converted from InstagramFeed.tsx
  Displays Instagram posts in an auto-scrolling carousel
{% endcomment %}

<section class="instagram-feed">
  <div class="instagram-header">
    <h2>{{ section.settings.heading | default: 'Follow Us @forgottenessentials' }}</h2>
    {% if section.settings.instagram_url != blank %}
      <a
        href="{{ section.settings.instagram_url }}"
        target="_blank"
        rel="noopener noreferrer"
        class="instagram-follow-btn"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
          <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
        </svg>
        {{ section.settings.button_text | default: 'Follow on Instagram' }}
      </a>
    {% endif %}
  </div>

  {% if section.blocks.size > 0 %}
    <div class="instagram-carousel-container">
      <div class="instagram-carousel">
        <div class="instagram-track">
          {% comment %}Triple the blocks for seamless infinite scroll{% endcomment %}
          {% for i in (1..3) %}
            {% for block in section.blocks %}
              <a
                href="{{ block.settings.post_url | default: section.settings.instagram_url }}"
                target="_blank"
                rel="noopener noreferrer"
                class="instagram-post"
                {{ block.shopify_attributes }}
              >
                {% if block.settings.image != blank %}
                  <img
                    src="{{ block.settings.image | image_url: width: 400 }}"
                    alt="{{ block.settings.caption | escape }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  />
                {% else %}
                  <div class="instagram-placeholder">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
                      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                      <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
                    </svg>
                  </div>
                {% endif %}
                <div class="instagram-overlay">
                  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
                  </svg>
                </div>
              </a>
            {% endfor %}
          {% endfor %}
        </div>
      </div>
    </div>
  {% else %}
    <div class="instagram-empty">
      <p>Add Instagram posts in the theme editor to display your feed.</p>
    </div>
  {% endif %}
</section>

<style>
.instagram-feed {
  padding: 4rem 0;
  overflow: hidden;
}

.instagram-header {
  max-width: 100%;
  margin: 0 auto 3rem;
  padding: 0 3rem;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 1.5rem;
  text-align: center;
}

.instagram-header h2 {
  font-size: 1.25rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  margin: 0;
}

.instagram-follow-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: var(--color-text);
  color: var(--color-bg);
  border: 2px solid var(--color-text);
  font-size: 0.875rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  text-decoration: none;
  white-space: nowrap;
  transition: all 0.2s ease;
}

.instagram-follow-btn:hover {
  background: var(--color-bg);
  color: var(--color-text);
}

.instagram-carousel-container {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.instagram-carousel {
  width: 100%;
}

.instagram-track {
  display: flex;
  gap: 1rem;
  animation: scroll 60s linear infinite;
  width: max-content;
}

.instagram-track:hover {
  animation-play-state: paused;
}

@keyframes scroll {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(calc(-100% / 3));
  }
}

.instagram-post {
  position: relative;
  width: 300px;
  height: 300px;
  flex-shrink: 0;
  overflow: hidden;
  display: block;
  border: 2px solid var(--color-border);
}

.instagram-post img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  transition: transform 0.3s ease;
}

.instagram-post:hover img {
  transform: scale(1.05);
}

.instagram-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-bg-muted, #f5f5f5);
  color: var(--color-muted);
}

.instagram-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  color: white;
}

.instagram-post:hover .instagram-overlay {
  opacity: 1;
}

.instagram-empty {
  text-align: center;
  padding: 3rem;
  color: var(--color-muted);
}

@media (max-width: 768px) {
  .instagram-header {
    padding: 0 1rem;
  }

  .instagram-header h2 {
    font-size: 1.125rem;
  }

  .instagram-post {
    width: 250px;
    height: 250px;
  }

  .instagram-track {
    animation-duration: 40s;
  }
}
</style>

