{% comment %}
  Featured Products Section - Converted from Home.tsx featured and new arrivals sections
{% endcomment %}

<section class="featured">
  <div class="section-header">
    <h2>{{ section.settings.heading }}</h2>
    {% if section.settings.view_all_link != blank %}
      <a href="{{ section.settings.view_all_link }}" class="section-link">View All</a>
    {% endif %}
  </div>
  <div class="products-grid">
    {% if section.settings.collection != blank %}
      {% assign collection = collections[section.settings.collection] %}
      {% for product in collection.products limit: section.settings.product_limit %}
        {% render 'product-card', product: product %}
      {% endfor %}
    {% else %}
      {% for product in collections.all.products limit: section.settings.product_limit %}
        {% render 'product-card', product: product %}
      {% endfor %}
    {% endif %}
  </div>
</section>

<style>
.featured,
.new-arrivals {
  max-width: 100%;
  margin: 0 auto;
  padding: 3rem 3rem;
}

@media (max-width: 640px) {
  .featured,
  .new-arrivals {
    padding: 2rem 1rem;
  }
}
</style>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "featured",
  "settings": [
    {
      "type": "header",
      "content": "Section Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Pieces"
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show Heading",
      "default": true
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Products will be pulled from this collection. Leave empty to show all products."
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Number of Products",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Link",
      "info": "Link for 'View All' button. Leave empty to hide button."
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All Text",
      "default": "View All"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "products_per_row",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Products Per Row",
      "default": 4,
      "info": "Number of products displayed per row on desktop"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 45
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 45
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "checkbox",
      "id": "enable_border_top",
      "label": "Enable Top Border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_border_bottom",
      "label": "Enable Bottom Border",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "settings": {
        "heading": "Featured Pieces",
        "product_limit": 4,
        "products_per_row": 4
      }
    }
  ]
}
{% endschema %}
