{% comment %}
  Header Section - Grunge Style
  Bigger header with box shadow instead of border
{% endcomment %}

<header class="header">
  <div class="header-container">
    <div class="header-left">
      <nav class="nav-links">
        <a href="{{ routes.all_products_collection_url }}">Shop</a>
        {% if linklists.main-menu.links.size > 0 %}
          {% for link in linklists.main-menu.links limit: 2 %}
            <a href="{{ link.url }}">{{ link.title }}</a>
          {% endfor %}
        {% else %}
          <a href="/collections/all">New Arrivals</a>
          <a href="/pages/about">About</a>
        {% endif %}
      </nav>
    </div>

    <a href="{{ routes.root_url }}" class="logo">
      {% if section.settings.logo != blank %}
        <img
          src="{{ section.settings.logo | img_url: '120x' }}"
          alt="{{ shop.name }}"
          class="logo-image"
          width="120"
          height="50"
        />
      {% else %}
        <img
          src="{{ 'Logo.jpg' | asset_url }}"
          alt="{{ shop.name }}"
          class="logo-image"
        />
      {% endif %}
    </a>

    <div class="header-right">
      <button class="search-btn" aria-label="Search" data-search-toggle>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.3-4.3"></path>
        </svg>
      </button>
      <button class="cart-btn" data-cart-toggle aria-label="Cart">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"></path>
          <path d="M3 6h18"></path>
          <path d="M16 10a4 4 0 0 1-8 0"></path>
        </svg>
        <span class="cart-count" data-cart-count style="display: none;">0</span>
      </button>
    </div>
  </div>
</header>

<style>
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: var(--color-bg);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.header-container {
  max-width: 100%;
  margin: 0 auto;
  padding: 1.5rem 3rem;
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  gap: 2rem;
}

.header-left,
.header-right {
  display: flex;
  align-items: center;
}

.header-left {
  justify-content: flex-start;
}

.header-right {
  justify-content: flex-end;
  gap: 1.25rem;
}

.nav-links {
  display: flex;
  gap: 2rem;
}

.nav-links a {
  font-size: 0.8rem;
  font-weight: 700;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  color: var(--color-text);
  text-decoration: none;
}

.nav-links a:hover {
  text-decoration: underline;
}

.logo {
  text-align: center;
  text-decoration: none;
  color: var(--color-text);
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-image {
  height: 50px;
  width: auto;
  object-fit: contain;
}

.search-btn,
.account-btn,
.cart-btn {
  background: none;
  border: none;
  cursor: pointer;
  color: var(--color-text);
  padding: 0.25rem;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.account-btn {
  text-decoration: none;
}

.cart-count {
  position: absolute;
  top: -4px;
  right: -8px;
  background: var(--color-text);
  color: var(--color-bg);
  font-size: 0.65rem;
  font-weight: 700;
  min-width: 18px;
  height: 18px;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid var(--color-text);
}

@media (max-width: 768px) {
  .header-container {
    padding: 1rem;
    gap: 1rem;
  }

  .nav-links {
    display: none;
  }

  .logo-image {
    height: 32px;
  }
}
</style>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image",
      "info": "Recommended size: 240x100px. Falls back to Logo.jpg if not set."
    },
    {
      "type": "range",
      "id": "logo_height",
      "min": 20,
      "max": 80,
      "step": 5,
      "unit": "px",
      "label": "Logo Height",
      "default": 50
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Main Menu",
      "default": "main-menu",
      "info": "Select menu for header navigation. Displays first 2-3 links."
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "header_padding",
      "min": 0.5,
      "max": 3,
      "step": 0.5,
      "unit": "rem",
      "label": "Header Padding",
      "default": 1.5
    },
    {
      "type": "checkbox",
      "id": "sticky_header",
      "label": "Enable Sticky Header",
      "default": true
    }
  ]
}
{% endschema %}
