{% comment %}
  Header Section - Grunge Style
  Bigger header with box shadow instead of border
{% endcomment %}

<header class="header">
  <div class="header-container">
    <!-- Mobile hamburger button -->
    <button class="mobile-menu-btn" aria-label="Menu" data-mobile-menu-toggle>
      <span class="hamburger">
        <span></span>
        <span></span>
        <span></span>
      </span>
    </button>

    <div class="header-left desktop-only">
      <nav class="nav-links">
        <a href="{{ routes.all_products_collection_url }}">Shop</a>
        {% if linklists.main-menu.links.size > 0 %}
          {% for link in linklists.main-menu.links limit: 2 %}
            <a href="{{ link.url }}">{{ link.title }}</a>
          {% endfor %}
        {% else %}
          <a href="/collections/all">New Arrivals</a>
          <a href="/pages/about">About</a>
        {% endif %}
      </nav>
    </div>

    <a href="{{ routes.root_url }}" class="logo">
      {% if section.settings.logo != blank %}
        <img
          src="{{ section.settings.logo | img_url: '200x' }}"
          alt="{{ shop.name }}"
          class="logo-image"
        />
      {% else %}
        <img
          src="/Logo.png"
          alt="{{ shop.name }}"
          class="logo-image"
        />
      {% endif %}
    </a>

    <div class="header-right">
      <!-- US Flag - Ships to USA only -->
      <span class="currency-flag desktop-only" title="Ships to USA only">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="14" viewBox="0 0 60 42">
          <rect width="60" height="42" fill="#B22234"/>
          <rect y="3.23" width="60" height="3.23" fill="#fff"/>
          <rect y="9.69" width="60" height="3.23" fill="#fff"/>
          <rect y="16.15" width="60" height="3.23" fill="#fff"/>
          <rect y="22.62" width="60" height="3.23" fill="#fff"/>
          <rect y="29.08" width="60" height="3.23" fill="#fff"/>
          <rect y="35.54" width="60" height="3.23" fill="#fff"/>
          <rect width="24" height="22.62" fill="#3C3B6E"/>
        </svg>
      </span>

      <button class="search-btn" aria-label="Search" data-search-toggle>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.3-4.3"></path>
        </svg>
      </button>

      <!-- Wishlist Link -->
      <a href="/pages/wishlist" class="wishlist-link desktop-only" aria-label="Wishlist">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
        </svg>
        <span class="wishlist-count" data-wishlist-count style="display: none;">0</span>
      </a>

      <!-- Account Dropdown -->
      <div class="account-dropdown-wrapper desktop-only">
        <button class="account-btn" aria-label="Account" data-account-toggle>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </button>

        <div class="account-dropdown" data-account-dropdown style="display: none;">
          {% if customer %}
            <div class="dropdown-header">
              <span class="dropdown-greeting">Hi, {{ customer.first_name }}!</span>
            </div>
            <a href="{{ routes.account_url }}" class="dropdown-link">My Account</a>
            <a href="/pages/wishlist" class="dropdown-link">Saved Items</a>
            <a href="{{ routes.account_logout_url }}" class="dropdown-link dropdown-logout">Sign Out</a>
          {% else %}
            <a href="{{ routes.account_login_url }}" class="dropdown-link">Sign In</a>
            <a href="{{ routes.account_register_url }}" class="dropdown-link">Create Account</a>
          {% endif %}
        </div>
      </div>

      <button class="cart-btn" data-cart-toggle aria-label="Cart">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"></path>
          <path d="M3 6h18"></path>
          <path d="M16 10a4 4 0 0 1-8 0"></path>
        </svg>
        <span class="cart-count" data-cart-count style="display: none;">0</span>
      </button>
    </div>
  </div>

  <!-- Mobile Menu Drawer -->
  <div class="mobile-menu" data-mobile-menu>
    <nav class="mobile-nav">
      <a href="{{ routes.all_products_collection_url }}">Shop</a>
      {% if linklists.main-menu.links.size > 0 %}
        {% for link in linklists.main-menu.links limit: 2 %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      {% else %}
        <a href="/collections/all">New Arrivals</a>
        <a href="/pages/about">About</a>
      {% endif %}
      <a href="/pages/wishlist">Saved Items</a>
      {% if customer %}
        <a href="{{ routes.account_url }}">My Account</a>
        <a href="{{ routes.account_logout_url }}" class="mobile-logout">Sign Out</a>
      {% else %}
        <a href="{{ routes.account_login_url }}">Sign In</a>
        <a href="{{ routes.account_register_url }}">Create Account</a>
      {% endif %}
    </nav>
  </div>

  <!-- Mobile menu overlay -->
  <div class="mobile-menu-overlay" data-mobile-menu-overlay></div>
</header>

<style>
.header {
  position: fixed;
  top: var(--announcement-bar-height, 36px);
  left: 0;
  right: 0;
  z-index: 100;
  background: var(--color-bg);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.header-container {
  max-width: 100%;
  margin: 0 auto;
  padding: 0 3rem;
  height: 70px;
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  gap: 2rem;
}

.header-left,
.header-right {
  display: flex;
  align-items: center;
}

.header-left {
  justify-content: flex-start;
}

.header-right {
  justify-content: flex-end;
  gap: 1.25rem;
}

.nav-links {
  display: flex;
  gap: 2rem;
}

.nav-links a {
  font-size: 0.8rem;
  font-weight: 700;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  color: var(--color-text);
  text-decoration: none;
}

.nav-links a:hover {
  text-decoration: underline;
}

.logo {
  text-align: center;
  text-decoration: none;
  color: var(--color-text);
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-image {
  height: {{ section.settings.logo_height }}px;
  max-height: 60px;
  width: auto;
  object-fit: contain;
}

.search-btn,
.account-btn,
.cart-btn {
  background: none;
  border: none;
  cursor: pointer;
  color: var(--color-text);
  padding: 0.25rem;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.account-btn {
  text-decoration: none;
}

.cart-count,
.wishlist-count {
  position: absolute;
  top: -4px;
  right: -8px;
  background: var(--color-text);
  color: var(--color-bg);
  font-size: 0.65rem;
  font-weight: 700;
  min-width: 18px;
  height: 18px;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid var(--color-text);
}

.currency-flag {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.25rem;
  cursor: default;
  opacity: 0.9;
}

.currency-flag svg {
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.wishlist-link {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-text);
  padding: 0.25rem;
  text-decoration: none;
}

.wishlist-link:hover {
  opacity: 0.7;
}

/* Account Dropdown */
.account-dropdown-wrapper {
  position: relative;
}

.account-dropdown {
  position: absolute;
  top: calc(100% + 12px);
  right: 0;
  background: #fff;
  border: 2px solid var(--color-ink, #1a1a1a);
  box-shadow: 4px 4px 0 var(--color-ink, #1a1a1a);
  min-width: 200px;
  z-index: 200;
}

.dropdown-header {
  padding: 16px 20px;
  border-bottom: 2px solid var(--color-ink, #1a1a1a);
  background: var(--color-cream, #f5f0e8);
}

.dropdown-greeting {
  font-weight: 700;
  font-size: 0.9rem;
}

.dropdown-link {
  display: block;
  width: 100%;
  padding: 14px 20px;
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--color-ink, #1a1a1a);
  text-decoration: none;
  text-align: left;
  background: #fff;
  border: none;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: background 0.2s ease;
}

.dropdown-link:last-child {
  border-bottom: none;
}

.dropdown-link:hover {
  background: var(--color-cream, #f5f0e8);
}

.dropdown-logout {
  color: #b91c1c;
}

.dropdown-logout:hover {
  background: #fef2f2;
}

/* Mobile Menu Button - Hidden on desktop */
.mobile-menu-btn {
  display: none;
  background: none;
  border: none;
  padding: 0.5rem;
  cursor: pointer;
}

.hamburger {
  display: flex;
  flex-direction: column;
  gap: 5px;
  width: 20px;
}

.hamburger span {
  display: block;
  height: 2px;
  width: 100%;
  background: var(--color-text);
  transition: all 0.3s ease;
}

.hamburger.open span:nth-child(1) {
  transform: rotate(45deg) translate(5px, 5px);
}

.hamburger.open span:nth-child(2) {
  opacity: 0;
}

.hamburger.open span:nth-child(3) {
  transform: rotate(-45deg) translate(5px, -5px);
}

/* Mobile Menu Drawer */
.mobile-menu {
  display: none;
  position: fixed;
  top: calc(52px + var(--announcement-bar-height, 36px));
  left: 0;
  width: 280px;
  height: calc(100vh - 52px - var(--announcement-bar-height, 36px));
  background: var(--color-bg);
  z-index: 150;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
  overflow-y: auto;
  border-right: 2px solid var(--color-border, #000);
}

.mobile-menu.open {
  transform: translateX(0);
}

.mobile-nav {
  display: flex;
  flex-direction: column;
  padding: 1rem 0;
}

.mobile-nav a {
  display: block;
  padding: 1rem 1.5rem;
  font-size: 0.9rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: var(--color-text);
  text-decoration: none;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.mobile-nav a:hover {
  background: rgba(0, 0, 0, 0.05);
}

.mobile-logout {
  color: #b91c1c !important;
}

/* Mobile Menu Overlay */
.mobile-menu-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 140;
}

.mobile-menu-overlay.open {
  display: block;
}

/* Desktop only elements */
.desktop-only {
  display: flex;
}

@media (max-width: 768px) {
  .mobile-menu-btn {
    display: flex;
    order: -1;
  }

  .mobile-menu {
    display: block;
  }

  .desktop-only {
    display: none !important;
  }

  .header-container {
    padding: 0 1rem;
    height: 52px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header-left {
    display: none;
  }

  .nav-links {
    display: none;
  }

  .logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .logo-image {
    height: {{ section.settings.logo_height | divided_by: 2 | at_least: 25 }}px;
    max-height: 40px;
  }

  .header-right {
    gap: 0.75rem;
    justify-self: end;
  }

  .currency-flag {
    display: none;
  }

  .search-btn svg,
  .cart-btn svg {
    width: 20px;
    height: 20px;
  }

  .cart-count {
    min-width: 16px;
    height: 16px;
    font-size: 0.6rem;
    top: -4px;
    right: -8px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Account dropdown
  const accountToggle = document.querySelector('[data-account-toggle]');
  const accountDropdown = document.querySelector('[data-account-dropdown]');

  if (accountToggle && accountDropdown) {
    accountToggle.addEventListener('click', function(e) {
      e.stopPropagation();
      const isVisible = accountDropdown.style.display !== 'none';
      accountDropdown.style.display = isVisible ? 'none' : 'block';
    });

    document.addEventListener('click', function(e) {
      if (!accountDropdown.contains(e.target) && !accountToggle.contains(e.target)) {
        accountDropdown.style.display = 'none';
      }
    });
  }

  // Mobile menu
  const mobileMenuToggle = document.querySelector('[data-mobile-menu-toggle]');
  const mobileMenu = document.querySelector('[data-mobile-menu]');
  const mobileMenuOverlay = document.querySelector('[data-mobile-menu-overlay]');
  const hamburger = mobileMenuToggle ? mobileMenuToggle.querySelector('.hamburger') : null;

  function closeMobileMenu() {
    if (mobileMenu) mobileMenu.classList.remove('open');
    if (mobileMenuOverlay) mobileMenuOverlay.classList.remove('open');
    if (hamburger) hamburger.classList.remove('open');
    document.body.style.overflow = '';
  }

  function openMobileMenu() {
    if (mobileMenu) mobileMenu.classList.add('open');
    if (mobileMenuOverlay) mobileMenuOverlay.classList.add('open');
    if (hamburger) hamburger.classList.add('open');
    document.body.style.overflow = 'hidden';
  }

  if (mobileMenuToggle) {
    mobileMenuToggle.addEventListener('click', function() {
      const isOpen = mobileMenu && mobileMenu.classList.contains('open');
      if (isOpen) {
        closeMobileMenu();
      } else {
        openMobileMenu();
      }
    });
  }

  if (mobileMenuOverlay) {
    mobileMenuOverlay.addEventListener('click', closeMobileMenu);
  }

  // Close mobile menu on link click
  if (mobileMenu) {
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(function(link) {
      link.addEventListener('click', closeMobileMenu);
    });
  }

  // Close mobile menu on resize to desktop
  window.addEventListener('resize', function() {
    if (window.innerWidth > 768) {
      closeMobileMenu();
    }
  });
});
</script>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image",
      "info": "Recommended size: 240x100px. Falls back to Logo.jpg if not set."
    },
    {
      "type": "range",
      "id": "logo_height",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Logo Height",
      "default": 55
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Main Menu",
      "default": "main-menu",
      "info": "Select menu for header navigation. Displays first 2-3 links."
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "header_padding",
      "min": 0.5,
      "max": 3,
      "step": 0.5,
      "unit": "rem",
      "label": "Header Padding",
      "default": 1.5
    },
    {
      "type": "checkbox",
      "id": "sticky_header",
      "label": "Enable Sticky Header",
      "default": true
    }
  ]
}
{% endschema %}
