{% comment %}
  About Process Section - Steps with image
{% endcomment %}

<section class="about-process">
  <div class="process-grid">
    <div class="process-content">
      <h2>{{ section.settings.heading }}</h2>
      <div class="process-steps">
        {% for block in section.blocks %}
          <div class="process-step" {{ block.shopify_attributes }}>
            <span class="step-number">{{ forloop.index | prepend: '0' | slice: -2, 2 }}</span>
            <div class="step-content">
              <h4>{{ block.settings.title }}</h4>
              <p>{{ block.settings.description }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="process-image">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | img_url: '800x' }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
        />
      {% else %}
        <div class="process-image-placeholder">
          <p>Process Image</p>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
.about-process {
  max-width: 1400px;
  margin: 0 auto;
  padding: 4rem 3rem;
}

.process-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.process-content h2 {
  font-size: 1.75rem;
  font-weight: 400;
  margin: 0 0 2rem;
  letter-spacing: -0.01em;
}

.process-steps {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.process-step {
  display: flex;
  gap: 1.5rem;
}

.step-number {
  font-size: 1.5rem;
  font-weight: 300;
  color: rgb(var(--color-muted));
  flex-shrink: 0;
}

.step-content h4 {
  font-size: 1rem;
  font-weight: 500;
  margin: 0 0 0.5rem;
  letter-spacing: -0.01em;
}

.step-content p {
  font-size: 0.9rem;
  line-height: 1.7;
  color: rgb(var(--color-muted));
  margin: 0;
}

.process-image img {
  width: 100%;
  height: 600px;
  object-fit: cover;
}

.process-image-placeholder {
  width: 100%;
  height: 600px;
  background: rgb(var(--color-base-background-2));
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgb(var(--color-muted));
}

@media (max-width: 1024px) {
  .process-grid {
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  .process-image img,
  .process-image-placeholder {
    height: 400px;
  }
}

@media (max-width: 768px) {
  .about-process {
    padding: 3rem 2rem;
  }
}
</style>

{% schema %}
{
  "name": "About Process",
  "tag": "section",
  "class": "about-process-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Curation Process"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Process Image"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Process Step",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Step Title",
          "default": "Step Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Step Description",
          "default": "Description of this step in the process."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Process",
      "blocks": [
        {
          "type": "step",
          "settings": {
            "title": "Source",
            "description": "We work with trusted suppliers, estates, and individual consignors to find exceptional pieces."
          }
        },
        {
          "type": "step",
          "settings": {
            "title": "Inspect",
            "description": "Every item undergoes a thorough quality check and authentication process."
          }
        },
        {
          "type": "step",
          "settings": {
            "title": "Prepare",
            "description": "Items are professionally cleaned and carefully photographed."
          }
        },
        {
          "type": "step",
          "settings": {
            "title": "Present",
            "description": "We provide detailed descriptions, measurements, and condition notes for informed shopping."
          }
        }
      ]
    }
  ]
}
{% endschema %}
