{% comment %}
  Hero Section - Converted from Home.tsx hero section
{% endcomment %}

<section class="hero">
  <div class="hero-content">
    <span class="hero-label">{{ section.settings.label }}</span>
    <h1 class="hero-title">{{ section.settings.title }}</h1>
    <p class="hero-description">
      {{ section.settings.description }}
    </p>
    <div class="hero-actions">
      {% if section.settings.primary_button_text != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="btn-primary">
          {{ section.settings.primary_button_text }}
        </a>
      {% endif %}
      {% if section.settings.secondary_button_text != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="btn-secondary">
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>
  </div>
  <div class="hero-image">
    {% if section.settings.hero_image != blank %}
      <img
        src="{{ section.settings.hero_image | img_url: '1600x' }}"
        alt="{{ section.settings.hero_image.alt | escape }}"
        loading="eager"
      />
    {% else %}
      <div class="hero-image-placeholder">
        <div class="placeholder-content">
          <svg width="120" height="120" viewBox="0 0 120 120" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="120" height="120" rx="8" fill="#f5f5f5"/>
            <path d="M60 45C54.4772 45 50 49.4772 50 55C50 60.5228 54.4772 65 60 65C65.5228 65 70 60.5228 70 55C70 49.4772 65.5228 45 60 45ZM60 61C56.6863 61 54 58.3137 54 55C54 51.6863 56.6863 49 60 49C63.3137 49 66 51.6863 66 55C66 58.3137 63.3137 61 60 61Z" fill="#d0d0d0"/>
            <path d="M85 35H35C31.6863 35 29 37.6863 29 41V79C29 82.3137 31.6863 85 35 85H85C88.3137 85 91 82.3137 91 79V41C91 37.6863 88.3137 35 85 35ZM35 39H85C86.1046 39 87 39.8954 87 41V68L75 56C74.2107 55.2107 72.7893 55.2107 72 56L55 73L47 65C46.2107 64.2107 44.7893 64.2107 44 65L33 76V41C33 39.8954 33.8954 39 35 39ZM85 81H35C33.8954 81 33 80.1046 33 79V80L44 69L52 77C52.7893 77.7893 54.2107 77.7893 55 77L72 60L87 75V79C87 80.1046 86.1046 81 85 81Z" fill="#d0d0d0"/>
          </svg>
          <p class="placeholder-text">Hero Image Placeholder</p>
          <p class="placeholder-subtext">1600 Ã— 2000px recommended</p>
        </div>
      </div>
    {% endif %}
  </div>
</section>

<style>
.hero {
  display: grid;
  grid-template-columns: 1fr 1fr;
  min-height: calc(100vh - 60px);
  max-width: 100%;
  margin: 0 auto;
  padding: 0 3rem 0 0;
}

.hero-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 3rem;
  padding-right: 4rem;
}

.hero-label {
  font-size: 0.75rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  color: var(--color-muted);
  margin-bottom: 1rem;
}

.hero-title {
  font-size: clamp(2rem, 4vw, 3.5rem);
  font-weight: 700;
  line-height: 1;
  margin: 0 0 1.5rem;
  letter-spacing: 0;
}

.hero-description {
  font-size: 0.95rem;
  line-height: 1.7;
  color: var(--color-muted);
  max-width: 400px;
  margin-bottom: 2rem;
}

.hero-actions {
  display: flex;
  gap: 1rem;
}

.hero-image {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
}

.hero-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center center;
}

.hero-image-placeholder {
  width: 100%;
  height: 100%;
  min-height: calc(100vh - 60px);
  background: linear-gradient(135deg, #fafafa 0%, #f0f0f0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px dashed #e0e0e0;
}

.placeholder-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  padding: 2rem;
  text-align: center;
}

.placeholder-text {
  font-size: 1.25rem;
  font-weight: 600;
  color: #999;
  margin: 0;
}

.placeholder-subtext {
  font-size: 0.875rem;
  color: #bbb;
  margin: 0;
}

@media (max-width: 1024px) {
  .hero {
    grid-template-columns: 1fr;
    min-height: auto;
    gap: 3rem;
    padding-top: 2rem;
  }

  .hero-content {
    padding-right: 0;
    text-align: center;
    align-items: center;
  }

  .hero-image {
    height: 60vh;
  }
}

@media (max-width: 640px) {
  .hero-actions {
    flex-direction: column;
    width: 100%;
  }

  .btn-primary,
  .btn-secondary {
    text-align: center;
  }
}
</style>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "hero",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "New Arrivals",
      "info": "Small text above the title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Shop by Style"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Vintage and secondhand clothing at prices that won't break the bank. Find your next favorite piece."
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image",
      "info": "Recommended size: 1600x2000px. Falls back to default image if not set."
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Collections"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link",
      "default": "/collections"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 400,
      "max": 900,
      "step": 50,
      "unit": "px",
      "label": "Minimum Section Height",
      "default": 600,
      "info": "Height minus header. Default uses calc(100vh - 60px)"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "settings": {
        "label": "New Arrivals",
        "title": "Shop by Style",
        "description": "Vintage and secondhand clothing at prices that won't break the bank. Find your next favorite piece.",
        "primary_button_text": "Shop Now",
        "primary_button_link": "/collections/all",
        "secondary_button_text": "Collections",
        "secondary_button_link": "/collections"
      }
    }
  ]
}
{% endschema %}
