{% comment %}
  Placeholder Product Card - Shows when no products exist
  Usage: {% render 'product-card-placeholder', title: 'Product Name', price: '$45' %}
{% endcomment %}

<div class="product-card placeholder-product">
  <div class="product-image-wrapper">
    <div class="placeholder-product-image">
      <span class="placeholder-icon">ðŸ‘—</span>
    </div>
  </div>
  <div class="product-info">
    <span class="product-era">{{ era | default: 'Vintage' }}</span>
    <h3 class="product-name">{{ title | default: 'Sample Product' }}</h3>
    <p class="product-meta">{{ meta | default: 'Size M Â· Excellent' }}</p>
    <div class="product-price">
      <span class="price-current">{{ price | default: '$45.00' }}</span>
    </div>
  </div>
</div>

<style>
.placeholder-product-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f9f9f9 25%, #f0f0f0 25%, #f0f0f0 50%, #f9f9f9 50%, #f9f9f9 75%, #f0f0f0 75%, #f0f0f0);
  background-size: 30px 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: shimmer 3s infinite linear;
}

.placeholder-icon {
  font-size: 4rem;
  opacity: 0.2;
}

@keyframes shimmer {
  0% { background-position: 0 0; }
  100% { background-position: 30px 30px; }
}
</style>
