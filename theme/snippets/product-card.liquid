{% comment %}
  Product Card Snippet - Converted from React ProductCard.tsx
  Usage: {% render 'product-card', product: product %}
{% endcomment %}

<a href="{{ product.url }}" class="product-card">
  <div class="product-image-wrapper">
    {% if product.featured_image %}
      <img
        src="{{ product.featured_image | img_url: 'medium' }}"
        alt="{{ product.featured_image.alt | escape }}"
        class="product-image"
        loading="lazy"
      />
    {% endif %}
    {% if product.images[1] %}
      <img
        src="{{ product.images[1] | img_url: 'medium' }}"
        alt="{{ product.images[1].alt | escape }}"
        class="product-image-hover"
        loading="lazy"
      />
    {% endif %}
    {% if product.compare_at_price > product.price %}
      <span class="product-badge">Sale</span>
    {% endif %}
  </div>
  <div class="product-info">
    {% if product.metafields.custom.era %}
      <span class="product-era">{{ product.metafields.custom.era }}</span>
    {% else %}
      <span class="product-era">Vintage</span>
    {% endif %}
    <h3 class="product-name">{{ product.title }}</h3>
    <p class="product-meta">
      {% if product.metafields.custom.size %}
        Size {{ product.metafields.custom.size }}
      {% endif %}
      {% if product.metafields.custom.condition %}
        Â· {{ product.metafields.custom.condition }}
      {% endif %}
    </p>
    <div class="product-price">
      <span class="price-current">{{ product.price | money_without_trailing_zeros }}</span>
      {% if product.compare_at_price > product.price %}
        <span class="price-original">{{ product.compare_at_price | money_without_trailing_zeros }}</span>
      {% endif %}
    </div>
  </div>
</a>

<style>
.product-card {
  text-decoration: none;
  color: var(--color-text);
  display: block;
}

.product-image-wrapper {
  position: relative;
  aspect-ratio: 3 / 4;
  overflow: hidden;
  background: var(--color-cream);
  margin-bottom: 0.75rem;
  border: 1px solid var(--color-border);
}

.product-image,
.product-image-hover {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-image-hover {
  display: none;
}

.product-card:hover .product-image-hover {
  display: block;
}

.product-badge {
  position: absolute;
  top: 0;
  left: 0;
  background: var(--color-accent);
  color: white;
  font-size: 0.7rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  padding: 0.5rem;
  border-right: 1px solid var(--color-border);
  border-bottom: 1px solid var(--color-border);
}

.product-info {
  text-align: left;
}

.product-era {
  font-size: 0.7rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  color: var(--color-muted);
  display: block;
  margin-bottom: 0.25rem;
}

.product-name {
  font-size: 0.875rem;
  font-weight: 400;
  margin: 0 0 0.25rem;
  line-height: 1.3;
}

.product-meta {
  font-size: 0.75rem;
  color: var(--color-muted);
  margin-bottom: 0.35rem;
}

.product-price {
  display: flex;
  justify-content: flex-start;
  gap: 0.5rem;
  align-items: center;
}

.price-current {
  font-size: 0.875rem;
  font-weight: 700;
}

.price-original {
  font-size: 0.8rem;
  color: var(--color-muted);
  text-decoration: line-through;
}

@media (max-width: 640px) {
  .product-name {
    font-size: 0.8rem;
  }

  .product-meta {
    font-size: 0.7rem;
  }
}
</style>
