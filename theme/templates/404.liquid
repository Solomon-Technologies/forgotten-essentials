{% comment %}
  404 Template - Page Not Found
  Error page with navigation options
{% endcomment %}

<main class="page-404">
  <div class="error-container">
    <!-- Large 404 Text -->
    <div class="error-code">404</div>

    <!-- Error Message -->
    <div class="error-content">
      <h1>Page Not Found</h1>
      <p>Looks like this piece has already been snatched up... or maybe it never existed.</p>
      <p>The page you're looking for doesn't exist or has been moved.</p>
    </div>

    <!-- Action Buttons -->
    <div class="error-actions">
      <a href="/" class="btn-primary">
        Back to Home
      </a>
      <a href="/collections/all" class="btn-secondary">
        Browse Collections
      </a>
    </div>

    <!-- Search Box -->
    <div class="error-search">
      <p class="error-search-label">Or try searching for what you need:</p>
      <form action="/search" method="get" class="search-form" role="search">
        <input
          type="search"
          name="q"
          placeholder="Search products..."
          class="search-input"
          autocomplete="off"
        >
        <button type="submit" class="search-submit">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </button>
      </form>
    </div>

    <!-- Popular Links -->
    <div class="error-links">
      <h2>Popular Pages</h2>
      <div class="error-links-grid">
        <a href="/" class="error-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
          <span>Home</span>
        </a>
        <a href="/collections/all" class="error-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect width="7" height="7" x="3" y="3" rx="1"/>
            <rect width="7" height="7" x="14" y="3" rx="1"/>
            <rect width="7" height="7" x="14" y="14" rx="1"/>
            <rect width="7" height="7" x="3" y="14" rx="1"/>
          </svg>
          <span>All Products</span>
        </a>
        <a href="/collections" class="error-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/>
            <rect width="8" height="4" x="8" y="2" rx="1" ry="1"/>
          </svg>
          <span>Collections</span>
        </a>
        <a href="/search" class="error-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
          <span>Search</span>
        </a>
      </div>
    </div>

    <!-- Fun Message -->
    <div class="error-footer">
      <p>Lost in the racks? Don't worry, even the best thrifters lose their way sometimes.</p>
    </div>
  </div>
</main>

<style>
.page-404 {
  padding-top: 60px;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rem 2rem;
}

.error-container {
  max-width: 700px;
  width: 100%;
  text-align: center;
}

.error-code {
  font-size: 10rem;
  font-weight: 700;
  line-height: 1;
  color: var(--color-text);
  margin-bottom: 2rem;
  text-shadow:
    2px 2px 0 var(--color-bg),
    4px 4px 0 var(--color-border);
}

.error-content {
  padding-bottom: 2rem;
  margin-bottom: 2rem;
  border-bottom: 2px solid var(--color-border);
}

.error-content h1 {
  font-size: 1.5rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  margin: 0 0 1rem;
}

.error-content p {
  font-size: 0.9rem;
  color: var(--color-muted);
  line-height: 1.8;
  margin: 0.5rem 0;
}

.error-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 3rem;
}

.btn-primary,
.btn-secondary {
  padding: 0.75rem 1.5rem;
  font-size: 0.875rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  text-decoration: none;
  border: 2px solid var(--color-text);
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-primary {
  background: var(--color-text);
  color: var(--color-bg);
}

.btn-primary:hover {
  background: transparent;
  color: var(--color-text);
}

.btn-secondary {
  background: transparent;
  color: var(--color-text);
}

.btn-secondary:hover {
  background: var(--color-text);
  color: var(--color-bg);
}

.error-search {
  margin: 3rem 0;
  padding: 2rem 0;
  border-top: 2px solid var(--color-border);
  border-bottom: 2px solid var(--color-border);
}

.error-search-label {
  font-size: 0.875rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  margin: 0 0 1rem;
}

.search-form {
  display: flex;
  gap: 0;
  border: 2px solid var(--color-border);
  max-width: 500px;
  margin: 0 auto;
}

.search-input {
  flex: 1;
  padding: 1rem 1.5rem;
  border: none;
  font-size: 0.9rem;
  font-family: var(--font-sans);
  outline: none;
}

.search-input::placeholder {
  color: var(--color-muted);
}

.search-submit {
  padding: 1rem 1.25rem;
  background: var(--color-text);
  color: var(--color-bg);
  border: none;
  border-left: 2px solid var(--color-border);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-submit:hover {
  background: #333;
}

.search-submit svg {
  stroke: currentColor;
}

.error-links {
  margin: 3rem 0;
}

.error-links h2 {
  font-size: 0.875rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  margin: 0 0 1.5rem;
}

.error-links-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 1rem;
}

.error-link {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.75rem;
  padding: 1.5rem 1rem;
  border: 2px solid var(--color-border);
  text-decoration: none;
  color: var(--color-text);
  transition: all 0.2s ease;
}

.error-link:hover {
  background: #f5f5f5;
  border-color: #666;
}

.error-link svg {
  stroke: var(--color-text);
}

.error-link span {
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
}

.error-footer {
  margin-top: 3rem;
  padding-top: 2rem;
  border-top: 1px solid var(--color-border);
}

.error-footer p {
  font-size: 0.875rem;
  color: var(--color-muted);
  font-style: italic;
  margin: 0;
}

@media (max-width: 768px) {
  .page-404 {
    padding: 2rem 1rem;
  }

  .error-code {
    font-size: 6rem;
  }

  .error-content h1 {
    font-size: 1.25rem;
  }

  .error-actions {
    flex-direction: column;
  }

  .btn-primary,
  .btn-secondary {
    width: 100%;
  }

  .error-links-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .search-form {
    flex-direction: column;
  }

  .search-submit {
    border-left: none;
    border-top: 2px solid var(--color-border);
    padding: 1rem;
  }
}

@media (max-width: 480px) {
  .error-code {
    font-size: 4rem;
    text-shadow:
      1px 1px 0 var(--color-bg),
      2px 2px 0 var(--color-border);
  }

  .error-links-grid {
    grid-template-columns: 1fr;
  }
}
</style>
