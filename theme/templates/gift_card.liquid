{% layout 'gift_card' %}

{% comment %}
  Gift Card Template - Grungy Aesthetic
  Displays gift card code, balance, and QR code
{% endcomment %}

<!doctype html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="#ffffff">

  <title>{{ 'gift_cards.issued.title' | t: value: gift_card.balance | money_without_trailing_zeros }} - {{ shop.name }}</title>
  <meta name="description" content="{{ 'gift_cards.issued.subtext' | t }}">

  {{ content_for_header }}

  <style>
    :root {
      --font-sans: Arial, Helvetica, sans-serif;
      --color-bg: #ffffff;
      --color-text: #000000;
      --color-muted: #4a4a4a;
      --color-border: #000000;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: var(--font-sans);
      background: var(--color-bg);
      color: var(--color-text);
      line-height: 1.6;
    }

    .gift-card-wrapper {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 2rem;
    }

    .gift-card-container {
      max-width: 600px;
      width: 100%;
      border: 2px solid var(--color-border);
      padding: 3rem 2rem;
      text-align: center;
    }

    .gift-card-header {
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
      border-bottom: 2px solid var(--color-border);
    }

    .gift-card-logo {
      font-size: 1.5rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0;
      margin-bottom: 0.5rem;
    }

    .gift-card-title {
      font-size: 0.875rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0;
      margin: 0;
    }

    .gift-card-content {
      padding: 2rem 0;
    }

    .gift-card-amount {
      font-size: 2.5rem;
      font-weight: 700;
      margin: 0 0 1rem;
    }

    .gift-card-balance-label {
      font-size: 0.875rem;
      color: var(--color-muted);
      text-transform: uppercase;
      letter-spacing: 0;
      margin-bottom: 2rem;
    }

    .gift-card-code-wrapper {
      margin: 2rem 0;
      padding: 1.5rem;
      border: 2px solid var(--color-border);
      background: #f5f5f5;
    }

    .gift-card-code-label {
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0;
      margin-bottom: 0.75rem;
    }

    .gift-card-code {
      font-size: 1.25rem;
      font-weight: 700;
      font-family: 'Courier New', monospace;
      letter-spacing: 0.1em;
      word-break: break-all;
    }

    .gift-card-qr {
      margin: 2rem 0;
    }

    .gift-card-qr img {
      max-width: 200px;
      height: auto;
      margin: 0 auto;
      border: 2px solid var(--color-border);
    }

    .gift-card-actions {
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 2px solid var(--color-border);
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .btn {
      padding: 0.75rem 1.5rem;
      font-size: 0.875rem;
      font-weight: 700;
      letter-spacing: 0;
      text-transform: uppercase;
      text-decoration: none;
      border: 2px solid var(--color-text);
      cursor: pointer;
      display: inline-block;
    }

    .btn-primary {
      background: var(--color-text);
      color: var(--color-bg);
    }

    .btn-secondary {
      background: transparent;
      color: var(--color-text);
    }

    .btn:hover {
      opacity: 0.8;
    }

    .gift-card-instructions {
      margin-top: 2rem;
      padding: 1.5rem;
      border: 1px solid var(--color-border);
      font-size: 0.875rem;
      color: var(--color-muted);
      text-align: left;
    }

    .gift-card-instructions h3 {
      font-size: 0.875rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0;
      margin: 0 0 1rem;
    }

    .gift-card-instructions p {
      margin: 0.5rem 0;
    }

    .gift-card-expiry {
      margin-top: 1.5rem;
      font-size: 0.75rem;
      color: var(--color-muted);
    }

    @media (max-width: 768px) {
      .gift-card-wrapper {
        padding: 1rem;
      }

      .gift-card-container {
        padding: 2rem 1.5rem;
      }

      .gift-card-amount {
        font-size: 2rem;
      }

      .gift-card-actions {
        flex-direction: column;
      }

      .btn {
        width: 100%;
      }
    }

    @media print {
      .gift-card-actions {
        display: none;
      }
    }
  </style>
</head>

<body>
  <div class="gift-card-wrapper">
    <div class="gift-card-container">
      <div class="gift-card-header">
        <div class="gift-card-logo">{{ shop.name }}</div>
        <h1 class="gift-card-title">Gift Card</h1>
      </div>

      <div class="gift-card-content">
        {% if gift_card.enabled %}
          <div class="gift-card-amount">
            {% if gift_card.balance != gift_card.initial_value %}
              {{ gift_card.balance | money_without_trailing_zeros }}
            {% else %}
              {{ gift_card.initial_value | money_without_trailing_zeros }}
            {% endif %}
          </div>

          {% if gift_card.balance != gift_card.initial_value %}
            <p class="gift-card-balance-label">Current Balance</p>
          {% else %}
            <p class="gift-card-balance-label">Gift Card Value</p>
          {% endif %}

          <div class="gift-card-code-wrapper">
            <div class="gift-card-code-label">Gift Card Code</div>
            <div class="gift-card-code" id="giftCardCode">{{ gift_card.code | format_code }}</div>
          </div>

          {% if gift_card.pass_url %}
            <div class="gift-card-qr">
              <img src="{{ gift_card.qr_identifier | img_url: '200x200' }}"
                   alt="Gift card QR code"
                   loading="lazy">
            </div>
          {% endif %}

          <div class="gift-card-actions">
            <button class="btn btn-primary" onclick="copyCode()">
              Copy Code
            </button>
            <a href="{{ shop.url }}" class="btn btn-secondary">
              Shop Now
            </a>
            <button class="btn btn-secondary" onclick="window.print()">
              Print Gift Card
            </button>
            {% if gift_card.pass_url %}
              <a href="{{ gift_card.pass_url }}" class="btn btn-secondary">
                Add to Apple Wallet
              </a>
            {% endif %}
          </div>

          <div class="gift-card-instructions">
            <h3>How to Use</h3>
            <p>1. Copy or write down your gift card code</p>
            <p>2. Shop at {{ shop.name }}</p>
            <p>3. Enter the code at checkout to apply your gift card balance</p>
            <p>4. Your remaining balance will be saved for future purchases</p>
          </div>

          {% if gift_card.expires_on %}
            <div class="gift-card-expiry">
              This gift card expires on {{ gift_card.expires_on | date: '%B %d, %Y' }}
            </div>
          {% endif %}
        {% else %}
          <div class="gift-card-disabled">
            <h2>This gift card is disabled</h2>
            <p>Please contact {{ shop.email }} for assistance.</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <script>
    function copyCode() {
      const code = document.getElementById('giftCardCode').innerText;

      if (navigator.clipboard) {
        navigator.clipboard.writeText(code).then(function() {
          alert('Gift card code copied to clipboard!');
        }, function() {
          fallbackCopy(code);
        });
      } else {
        fallbackCopy(code);
      }
    }

    function fallbackCopy(text) {
      const textarea = document.createElement('textarea');
      textarea.value = text;
      textarea.style.position = 'fixed';
      textarea.style.opacity = '0';
      document.body.appendChild(textarea);
      textarea.select();

      try {
        document.execCommand('copy');
        alert('Gift card code copied to clipboard!');
      } catch (err) {
        alert('Unable to copy code. Please copy manually: ' + text);
      }

      document.body.removeChild(textarea);
    }
  </script>
</body>
</html>
