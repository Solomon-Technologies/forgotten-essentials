{% layout 'password' %}

{% comment %}
  Password Template - Password Protected Store
  Email capture form and store information
{% endcomment %}

<!doctype html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="#ffffff">

  <title>{{ shop.name }} - Coming Soon</title>
  <meta name="description" content="{{ shop.description | escape }}">

  {{ content_for_header }}

  <style>
    :root {
      --font-sans: Arial, Helvetica, sans-serif;
      --color-bg: #ffffff;
      --color-text: #000000;
      --color-muted: #4a4a4a;
      --color-border: #000000;
      --color-error: #d20000;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: var(--font-sans);
      background: var(--color-bg);
      color: var(--color-text);
      line-height: 1.6;
    }

    .password-page {
      display: flex;
      min-height: 100vh;
    }

    .password-sidebar {
      width: 40%;
      background: #f5f5f5;
      border-right: 2px solid var(--color-border);
      padding: 3rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .password-content {
      width: 60%;
      padding: 3rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
    }

    .password-logo {
      font-size: 2rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0;
      margin-bottom: 1rem;
    }

    .password-tagline {
      font-size: 0.9rem;
      color: var(--color-muted);
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      border-bottom: 2px solid var(--color-border);
    }

    .password-message {
      max-width: 500px;
    }

    .password-message h1 {
      font-size: 1.5rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0;
      margin: 0 0 1rem;
    }

    .password-message p {
      font-size: 0.9rem;
      color: var(--color-muted);
      line-height: 1.8;
      margin: 0 0 2rem;
    }

    .password-form-wrapper {
      width: 100%;
      max-width: 500px;
    }

    .password-form-title {
      font-size: 0.875rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0;
      margin: 0 0 1.5rem;
    }

    .password-form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .password-input {
      width: 100%;
      padding: 1rem;
      border: 2px solid var(--color-border);
      font-size: 0.9rem;
      font-family: var(--font-sans);
      text-align: center;
    }

    .password-input::placeholder {
      color: var(--color-muted);
    }

    .password-input:focus {
      outline: none;
      border-color: #666;
    }

    .password-submit {
      padding: 1rem;
      background: var(--color-text);
      color: var(--color-bg);
      border: 2px solid var(--color-text);
      font-size: 0.875rem;
      font-weight: 700;
      letter-spacing: 0;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .password-submit:hover {
      background: transparent;
      color: var(--color-text);
    }

    .password-error {
      background: #ffe5e5;
      border: 2px solid var(--color-error);
      padding: 1rem;
      margin-bottom: 1rem;
      font-size: 0.875rem;
      color: var(--color-error);
    }

    .newsletter-section {
      margin-top: 3rem;
      padding-top: 3rem;
      border-top: 2px solid var(--color-border);
    }

    .newsletter-title {
      font-size: 0.875rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0;
      margin: 0 0 1rem;
    }

    .newsletter-description {
      font-size: 0.875rem;
      color: var(--color-muted);
      margin: 0 0 1.5rem;
    }

    .newsletter-form {
      display: flex;
      gap: 0;
      border: 2px solid var(--color-border);
    }

    .newsletter-input {
      flex: 1;
      padding: 1rem;
      border: none;
      font-size: 0.9rem;
      font-family: var(--font-sans);
    }

    .newsletter-input::placeholder {
      color: var(--color-muted);
    }

    .newsletter-input:focus {
      outline: none;
    }

    .newsletter-submit {
      padding: 1rem 1.5rem;
      background: var(--color-text);
      color: var(--color-bg);
      border: none;
      border-left: 2px solid var(--color-border);
      font-size: 0.875rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0;
      cursor: pointer;
    }

    .newsletter-submit:hover {
      background: #333;
    }

    .sidebar-info {
      margin-bottom: 2rem;
    }

    .sidebar-info h2 {
      font-size: 0.875rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0;
      margin: 0 0 1rem;
    }

    .sidebar-info p {
      font-size: 0.875rem;
      color: var(--color-muted);
      margin: 0.5rem 0;
    }

    .social-links {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
    }

    .social-link {
      width: 40px;
      height: 40px;
      border: 2px solid var(--color-border);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--color-text);
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .social-link:hover {
      background: var(--color-text);
      color: var(--color-bg);
    }

    .admin-link {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      padding: 0.5rem 1rem;
      background: var(--color-bg);
      border: 1px solid var(--color-border);
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0;
      text-decoration: none;
      color: var(--color-text);
    }

    .admin-link:hover {
      background: #f5f5f5;
    }

    @media (max-width: 968px) {
      .password-page {
        flex-direction: column;
      }

      .password-sidebar,
      .password-content {
        width: 100%;
      }

      .password-sidebar {
        border-right: none;
        border-bottom: 2px solid var(--color-border);
        padding: 2rem;
      }

      .password-content {
        padding: 2rem;
      }

      .admin-link {
        position: static;
        display: block;
        text-align: center;
        margin-top: 2rem;
      }
    }

    @media (max-width: 640px) {
      .newsletter-form {
        flex-direction: column;
      }

      .newsletter-submit {
        border-left: none;
        border-top: 2px solid var(--color-border);
      }

      .password-sidebar {
        padding: 1.5rem;
      }

      .password-content {
        padding: 1.5rem;
      }
    }
  </style>
</head>

<body>
  <div class="password-page">
    <!-- Sidebar -->
    <div class="password-sidebar">
      <div class="password-logo">{{ shop.name }}</div>
      <div class="password-tagline">
        {{ shop.description | default: 'Vintage Clothing & Accessories' }}
      </div>

      <div class="sidebar-info">
        <h2>Opening Soon</h2>
        <p>We're currently putting the finishing touches on our new online store. Sign up below to be notified when we launch!</p>
      </div>

      <div class="sidebar-info">
        <h2>What to Expect</h2>
        <p>Curated vintage clothing from the 60s, 70s, 80s, and 90s</p>
        <p>Authentic pieces with history and character</p>
        <p>Sustainable fashion that stands the test of time</p>
      </div>

      {% if shop.email or settings.social_twitter_link or settings.social_facebook_link or settings.social_instagram_link %}
        <div class="sidebar-info">
          <h2>Connect With Us</h2>
          {% if shop.email %}
            <p>Email: {{ shop.email }}</p>
          {% endif %}

          <div class="social-links">
            {% if settings.social_instagram_link != blank %}
              <a href="{{ settings.social_instagram_link }}" class="social-link" target="_blank" rel="noopener">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                  <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
                </svg>
              </a>
            {% endif %}
            {% if settings.social_facebook_link != blank %}
              <a href="{{ settings.social_facebook_link }}" class="social-link" target="_blank" rel="noopener">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                </svg>
              </a>
            {% endif %}
            {% if settings.social_twitter_link != blank %}
              <a href="{{ settings.social_twitter_link }}" class="social-link" target="_blank" rel="noopener">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>

    <!-- Main Content -->
    <div class="password-content">
      <div class="password-message">
        <h1>Store Opening Soon</h1>
        <p>We're preparing something special. Enter the password below if you have early access, or sign up to be notified when we officially launch.</p>
      </div>

      <!-- Password Form -->
      <div class="password-form-wrapper">
        <h2 class="password-form-title">Enter Using Password</h2>

        {% if password_page.errors %}
          <div class="password-error">
            {{ password_page.errors | first }}
          </div>
        {% endif %}

        {% form 'storefront_password', class: 'password-form' %}
          <input
            type="password"
            name="password"
            id="Password"
            class="password-input"
            placeholder="Enter password"
            autocomplete="current-password"
            required
          >
          <button type="submit" class="password-submit">
            Enter Store
          </button>
        {% endform %}
      </div>

      <!-- Newsletter Signup -->
      <div class="newsletter-section">
        <h2 class="newsletter-title">Get Notified</h2>
        <p class="newsletter-description">
          Be the first to know when we launch. We'll send you an email with exclusive early access.
        </p>

        {% form 'customer', class: 'newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input
            type="email"
            name="contact[email]"
            class="newsletter-input"
            placeholder="Enter your email"
            required
          >
          <button type="submit" class="newsletter-submit">
            Notify Me
          </button>
        {% endform %}
      </div>
    </div>
  </div>

  <!-- Admin Link -->
  <a href="/admin" class="admin-link">
    Store Owner? Login Here
  </a>
</body>
</html>
