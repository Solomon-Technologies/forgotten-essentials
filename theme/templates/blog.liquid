{% comment %}
  Blog Template - Blog Listing Page
  Displays blog posts in a grid
{% endcomment %}

<main class="blog-page">
  <div class="blog-header">
    <h1>{{ blog.title }}</h1>
    {% if blog.articles_count > 0 %}
      <p>{{ blog.articles_count }} {% if blog.articles_count == 1 %}post{% else %}posts{% endif %}</p>
    {% endif %}
  </div>

  <div class="blog-container">
    {% if blog.articles_count > 0 %}
      <!-- Blog Sidebar -->
      <aside class="blog-sidebar">
        {% if blog.tags.size > 0 %}
          <div class="sidebar-section">
            <h3>Filter by Tag</h3>
            <ul class="tag-list">
              <li>
                <a href="{{ blog.url }}" {% unless current_tags %}class="active"{% endunless %}>
                  All Posts
                </a>
              </li>
              {% for tag in blog.all_tags %}
                <li>
                  <a href="{{ blog.url }}/tagged/{{ tag | handle }}" {% if current_tags contains tag %}class="active"{% endif %}>
                    {{ tag }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        <div class="sidebar-section">
          <h3>Recent Posts</h3>
          <ul class="recent-posts">
            {% for article in blog.articles limit: 5 %}
              <li>
                <a href="{{ article.url }}" class="recent-post-link">
                  {{ article.title | truncate: 60 }}
                </a>
                <span class="recent-post-date">{{ article.published_at | date: '%b %d, %Y' }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </aside>

      <!-- Blog Articles Grid -->
      <div class="blog-articles">
        <div class="articles-grid">
          {% for article in blog.articles %}
            <article class="article-card">
              {% if article.image %}
                <a href="{{ article.url }}" class="article-image">
                  <img
                    src="{{ article.image | img_url: 'large' }}"
                    alt="{{ article.title | escape }}"
                    loading="lazy"
                  >
                </a>
              {% endif %}

              <div class="article-content">
                {% if article.tags.size > 0 %}
                  <div class="article-tags">
                    {% for tag in article.tags limit: 3 %}
                      <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article-tag">
                        {{ tag }}
                      </a>
                    {% endfor %}
                  </div>
                {% endif %}

                <h2 class="article-title">
                  <a href="{{ article.url }}">{{ article.title }}</a>
                </h2>

                <div class="article-meta">
                  <span class="article-author">{{ article.author }}</span>
                  <span class="article-date">{{ article.published_at | date: '%B %d, %Y' }}</span>
                </div>

                {% if article.excerpt != blank %}
                  <div class="article-excerpt">
                    {{ article.excerpt | strip_html | truncate: 150 }}
                  </div>
                {% endif %}

                <a href="{{ article.url }}" class="article-read-more">
                  Read More â†’
                </a>
              </div>
            </article>
          {% endfor %}
        </div>

        {% if paginate.pages > 1 %}
          <div class="pagination">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="pagination-btn">Previous</a>
            {% endif %}

            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a href="{{ part.url }}" class="pagination-number">{{ part.title }}</a>
              {% else %}
                {% if part.title == paginate.current_page %}
                  <span class="pagination-number active">{{ part.title }}</span>
                {% else %}
                  <span class="pagination-number">{{ part.title }}</span>
                {% endif %}
              {% endif %}
            {% endfor %}

            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="pagination-btn">Next</a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% else %}
      <!-- No Posts -->
      <div class="blog-empty">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
          <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
          <polyline points="14 2 14 8 20 8"/>
          <line x1="16" x2="8" y1="13" y2="13"/>
          <line x1="16" x2="8" y1="17" y2="17"/>
          <line x1="10" x2="8" y1="9" y2="9"/>
        </svg>
        <h2>No posts yet</h2>
        <p>Check back soon for updates and stories.</p>
        <a href="/" class="btn-primary">
          Back to Home
        </a>
      </div>
    {% endif %}
  </div>
</main>

{% paginate blog.articles by 12 %}
  {{ content_for_layout }}
{% endpaginate %}

<style>
.blog-page {
  padding-top: 60px;
  min-height: 100vh;
}

.blog-header {
  text-align: center;
  padding: 3rem 2rem 2rem;
  border-bottom: 2px solid var(--color-border);
}

.blog-header h1 {
  font-size: 1rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  margin: 0 0 0.5rem;
}

.blog-header p {
  font-size: 0.875rem;
  color: var(--color-muted);
  margin: 0;
}

.blog-container {
  display: grid;
  grid-template-columns: 250px 1fr;
  gap: 3rem;
  max-width: 1400px;
  margin: 0 auto;
  padding: 3rem 2rem;
}

.blog-sidebar {
  position: sticky;
  top: 80px;
  height: fit-content;
}

.sidebar-section {
  margin-bottom: 2rem;
}

.sidebar-section h3 {
  font-size: 0.875rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  margin: 0 0 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 2px solid var(--color-border);
}

.tag-list,
.recent-posts {
  list-style: none;
  padding: 0;
  margin: 0;
}

.tag-list li {
  margin-bottom: 0.5rem;
}

.tag-list a {
  padding: 0.25rem 0;
  font-size: 0.875rem;
  color: var(--color-muted);
  text-decoration: none;
  display: block;
}

.tag-list a:hover,
.tag-list a.active {
  color: var(--color-text);
  text-decoration: underline;
}

.recent-posts li {
  margin-bottom: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--color-border);
}

.recent-posts li:last-child {
  border-bottom: none;
}

.recent-post-link {
  display: block;
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--color-text);
  text-decoration: none;
  margin-bottom: 0.25rem;
}

.recent-post-link:hover {
  text-decoration: underline;
}

.recent-post-date {
  font-size: 0.75rem;
  color: var(--color-muted);
}

.blog-articles {
  min-height: 50vh;
}

.articles-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem;
}

.article-card {
  border: 2px solid var(--color-border);
  display: flex;
  flex-direction: column;
  transition: border-color 0.2s ease;
}

.article-card:hover {
  border-color: #666;
}

.article-image {
  aspect-ratio: 16 / 10;
  overflow: hidden;
  background: #f5f5f5;
  display: block;
}

.article-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.article-card:hover .article-image img {
  transform: scale(1.05);
}

.article-content {
  padding: 1.5rem;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.article-tag {
  font-size: 0.65rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: var(--color-muted);
  text-decoration: none;
  padding: 0.25rem 0.5rem;
  border: 1px solid var(--color-border);
}

.article-tag:hover {
  color: var(--color-text);
  border-color: var(--color-text);
}

.article-title {
  font-size: 1.1rem;
  font-weight: 500;
  line-height: 1.3;
  margin: 0 0 1rem;
}

.article-title a {
  color: var(--color-text);
  text-decoration: none;
}

.article-title a:hover {
  text-decoration: underline;
}

.article-meta {
  display: flex;
  gap: 1rem;
  font-size: 0.75rem;
  color: var(--color-muted);
  margin-bottom: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--color-border);
}

.article-excerpt {
  font-size: 0.875rem;
  line-height: 1.7;
  color: var(--color-muted);
  margin-bottom: 1rem;
  flex: 1;
}

.article-read-more {
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  color: var(--color-text);
  text-decoration: none;
  align-self: flex-start;
}

.article-read-more:hover {
  text-decoration: underline;
}

.blog-empty {
  text-align: center;
  padding: 6rem 2rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.5rem;
  grid-column: 1 / -1;
}

.blog-empty svg {
  stroke: var(--color-muted);
}

.blog-empty h2 {
  font-size: 1.5rem;
  font-weight: 400;
  margin: 0;
}

.blog-empty p {
  font-size: 0.9rem;
  color: var(--color-muted);
  margin: 0;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 0.5rem;
  margin-top: 3rem;
  padding-top: 2rem;
  border-top: 1px solid var(--color-border);
}

.pagination-btn,
.pagination-number {
  padding: 0.5rem 0.75rem;
  border: 1px solid var(--color-border);
  background: var(--color-bg);
  color: var(--color-text);
  text-decoration: none;
  font-size: 0.875rem;
}

.pagination-number.active {
  background: var(--color-text);
  color: var(--color-bg);
}

@media (max-width: 1024px) {
  .blog-container {
    grid-template-columns: 1fr;
  }

  .blog-sidebar {
    position: static;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    border: 2px solid var(--color-border);
    padding: 1.5rem;
  }

  .articles-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .blog-container {
    padding: 2rem 1rem;
  }

  .blog-sidebar {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 480px) {
  .blog-header {
    padding: 2rem 1rem 1.5rem;
  }
}
</style>
