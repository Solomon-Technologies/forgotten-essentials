{% comment %}
  Article Template - Single Blog Post
  Displays individual blog post with comments
{% endcomment %}

<main class="article-page">
  <nav class="breadcrumb">
    <a href="/">Home</a>
    <span>/</span>
    <a href="{{ blog.url }}">{{ blog.title }}</a>
    <span>/</span>
    <span>{{ article.title }}</span>
  </nav>

  <article class="article-detail">
    <!-- Article Header -->
    <header class="article-header">
      {% if article.tags.size > 0 %}
        <div class="article-tags">
          {% for tag in article.tags %}
            <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article-tag">
              {{ tag }}
            </a>
          {% endfor %}
        </div>
      {% endif %}

      <h1 class="article-title">{{ article.title }}</h1>

      <div class="article-meta">
        <span class="article-author">By {{ article.author }}</span>
        <span class="article-date">{{ article.published_at | date: '%B %d, %Y' }}</span>
        {% if article.comments_count > 0 %}
          <span class="article-comments">{{ article.comments_count }} {% if article.comments_count == 1 %}Comment{% else %}Comments{% endif %}</span>
        {% endif %}
      </div>
    </header>

    <!-- Featured Image -->
    {% if article.image %}
      <div class="article-featured-image">
        <img
          src="{{ article.image | img_url: '1200x800' }}"
          alt="{{ article.title | escape }}"
          loading="eager"
        >
      </div>
    {% endif %}

    <!-- Article Content -->
    <div class="article-content rte">
      {{ article.content }}
    </div>

    <!-- Article Footer -->
    <footer class="article-footer">
      <div class="article-share">
        <span class="share-label">Share:</span>
        <div class="share-buttons">
          <a
            href="https://www.facebook.com/sharer.php?u={{ shop.url }}{{ article.url }}"
            target="_blank"
            rel="noopener"
            class="share-btn"
            aria-label="Share on Facebook"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
            </svg>
          </a>
          <a
            href="https://twitter.com/intent/tweet?url={{ shop.url }}{{ article.url }}&text={{ article.title | url_encode }}"
            target="_blank"
            rel="noopener"
            class="share-btn"
            aria-label="Share on Twitter"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/>
            </svg>
          </a>
          <a
            href="https://pinterest.com/pin/create/button/?url={{ shop.url }}{{ article.url }}&description={{ article.title | url_encode }}"
            target="_blank"
            rel="noopener"
            class="share-btn"
            aria-label="Share on Pinterest"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" x2="12" y1="2" y2="22"/>
              <path d="M12 2C6.5 2 2 6.5 2 12c0 4.3 2.8 8 6.7 9.4-.1-.8-.1-2 0-2.8l1.5-6.5s-.4-.8-.4-1.9c0-1.8 1-3.1 2.3-3.1 1.1 0 1.6.8 1.6 1.8 0 1.1-.7 2.8-1.1 4.3-.3 1.3.6 2.3 1.9 2.3 2.3 0 4.1-2.4 4.1-5.9 0-3.1-2.2-5.2-5.4-5.2-3.7 0-5.9 2.8-5.9 5.6 0 1.1.4 2.3 1 3 .1.1.1.2.1.4l-.4 1.5c-.1.3-.2.4-.5.2-1.7-.8-2.8-3.3-2.8-5.3 0-4.3 3.1-8.3 9-8.3 4.7 0 8.4 3.4 8.4 7.9 0 4.7-3 8.5-7.1 8.5-1.4 0-2.7-.7-3.1-1.5l-.8 3.1c-.3 1.1-1.1 2.5-1.6 3.3 1.2.4 2.5.6 3.8.6 5.5 0 10-4.5 10-10S17.5 2 12 2z"/>
            </svg>
          </a>
        </div>
      </div>

      {% if blog.next_article or blog.previous_article %}
        <div class="article-navigation">
          {% if blog.previous_article %}
            <a href="{{ blog.previous_article.url }}" class="article-nav-link article-nav-prev">
              <span class="nav-label">← Previous</span>
              <span class="nav-title">{{ blog.previous_article.title | truncate: 50 }}</span>
            </a>
          {% endif %}
          {% if blog.next_article %}
            <a href="{{ blog.next_article.url }}" class="article-nav-link article-nav-next">
              <span class="nav-label">Next →</span>
              <span class="nav-title">{{ blog.next_article.title | truncate: 50 }}</span>
            </a>
          {% endif %}
        </div>
      {% endif %}
    </footer>

    <!-- Comments Section -->
    {% if blog.comments_enabled? %}
      <div class="article-comments-section">
        <h2 class="comments-title">
          {% if article.comments_count > 0 %}
            {{ article.comments_count }} {% if article.comments_count == 1 %}Comment{% else %}Comments{% endif %}
          {% else %}
            Leave a Comment
          {% endif %}
        </h2>

        {% if article.comments_count > 0 %}
          <div class="comments-list">
            {% paginate article.comments by 50 %}
              {% for comment in article.comments %}
                <div class="comment" id="comment-{{ comment.id }}">
                  <div class="comment-header">
                    <span class="comment-author">{{ comment.author }}</span>
                    <span class="comment-date">{{ comment.created_at | date: '%B %d, %Y at %I:%M %p' }}</span>
                  </div>
                  <div class="comment-content">
                    {{ comment.content }}
                  </div>
                </div>
              {% endfor %}

              {% if paginate.pages > 1 %}
                <div class="pagination">
                  {% if paginate.previous %}
                    <a href="{{ paginate.previous.url }}" class="pagination-btn">Previous</a>
                  {% endif %}
                  {% if paginate.next %}
                    <a href="{{ paginate.next.url }}" class="pagination-btn">Next</a>
                  {% endif %}
                </div>
              {% endif %}
            {% endpaginate %}
          </div>
        {% endif %}

        <!-- Comment Form -->
        <div class="comment-form-wrapper">
          <h3 class="comment-form-title">Add a Comment</h3>

          {% form 'new_comment', article %}
            {% if form.posted_successfully? %}
              <div class="form-success">
                {% if blog.moderated? %}
                  Your comment has been submitted and will appear once approved.
                {% else %}
                  Your comment has been posted successfully!
                {% endif %}
              </div>
            {% endif %}

            {% if form.errors %}
              <div class="form-errors">
                <p>There was an error submitting your comment:</p>
                <ul>
                  {% for field in form.errors %}
                    <li>{{ field }} - {{ form.errors.messages[field] }}</li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}

            <div class="form-row">
              <div class="form-field">
                <label for="CommentAuthor">Name *</label>
                <input
                  type="text"
                  name="comment[author]"
                  id="CommentAuthor"
                  class="form-input"
                  value="{{ form.author }}"
                  required
                >
              </div>

              <div class="form-field">
                <label for="CommentEmail">Email *</label>
                <input
                  type="email"
                  name="comment[email]"
                  id="CommentEmail"
                  class="form-input"
                  value="{{ form.email }}"
                  required
                >
              </div>
            </div>

            <div class="form-field">
              <label for="CommentBody">Comment *</label>
              <textarea
                name="comment[body]"
                id="CommentBody"
                class="form-textarea"
                required
              >{{ form.body }}</textarea>
            </div>

            <button type="submit" class="btn-submit">
              Post Comment
            </button>
          {% endform %}
        </div>
      </div>
    {% endif %}
  </article>

  <!-- Related Articles -->
  {% if blog.articles_count > 1 %}
    <aside class="related-articles">
      <h2 class="related-title">More from {{ blog.title }}</h2>
      <div class="related-grid">
        {% for related_article in blog.articles limit: 3 %}
          {% unless related_article.id == article.id %}
            <a href="{{ related_article.url }}" class="related-article-card">
              {% if related_article.image %}
                <div class="related-article-image">
                  <img
                    src="{{ related_article.image | img_url: 'medium' }}"
                    alt="{{ related_article.title | escape }}"
                    loading="lazy"
                  >
                </div>
              {% endif %}
              <div class="related-article-content">
                <h3>{{ related_article.title }}</h3>
                <span class="related-article-date">{{ related_article.published_at | date: '%B %d, %Y' }}</span>
              </div>
            </a>
          {% endunless %}
        {% endfor %}
      </div>
    </aside>
  {% endif %}
</main>

<style>
.article-page {
  padding-top: 60px;
  min-height: 100vh;
  max-width: 900px;
  margin: 0 auto;
  padding-left: 2rem;
  padding-right: 2rem;
}

.breadcrumb {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 1.25rem 0;
  font-size: 0.75rem;
}

.breadcrumb a {
  color: var(--color-muted);
  text-decoration: none;
}

.breadcrumb a:hover {
  color: var(--color-text);
}

.breadcrumb span {
  color: var(--color-muted);
}

.breadcrumb span:last-child {
  color: var(--color-text);
}

.article-detail {
  padding-bottom: 4rem;
}

.article-header {
  text-align: center;
  padding: 2rem 0 3rem;
  border-bottom: 2px solid var(--color-border);
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  justify-content: center;
  margin-bottom: 1.5rem;
}

.article-tag {
  font-size: 0.65rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: var(--color-muted);
  text-decoration: none;
  padding: 0.25rem 0.5rem;
  border: 1px solid var(--color-border);
}

.article-tag:hover {
  color: var(--color-text);
  border-color: var(--color-text);
}

.article-title {
  font-size: 2rem;
  font-weight: 700;
  line-height: 1.2;
  margin: 0 0 1.5rem;
}

.article-meta {
  display: flex;
  gap: 1.5rem;
  justify-content: center;
  font-size: 0.875rem;
  color: var(--color-muted);
}

.article-featured-image {
  margin: 3rem 0;
  border: 2px solid var(--color-border);
  overflow: hidden;
}

.article-featured-image img {
  width: 100%;
  height: auto;
  display: block;
}

.article-content {
  font-size: 1rem;
  line-height: 1.8;
  color: var(--color-text);
  padding: 2rem 0;
}

/* RTE Styles (Rich Text Editor) */
.rte h2 {
  font-size: 1.5rem;
  font-weight: 700;
  margin: 2.5rem 0 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 2px solid var(--color-border);
}

.rte h3 {
  font-size: 1.25rem;
  font-weight: 700;
  margin: 2rem 0 1rem;
}

.rte p {
  margin: 0 0 1.5rem;
}

.rte a {
  color: var(--color-text);
  text-decoration: underline;
  font-weight: 500;
}

.rte a:hover {
  text-decoration: none;
}

.rte img {
  max-width: 100%;
  height: auto;
  margin: 2rem 0;
  border: 2px solid var(--color-border);
}

.rte ul,
.rte ol {
  margin: 0 0 1.5rem;
  padding-left: 2rem;
}

.rte li {
  margin-bottom: 0.5rem;
}

.rte blockquote {
  margin: 2rem 0;
  padding: 1.5rem 2rem;
  border-left: 4px solid var(--color-border);
  background: #f5f5f5;
  font-style: italic;
  color: var(--color-muted);
}

.article-footer {
  padding: 3rem 0;
  border-top: 2px solid var(--color-border);
  border-bottom: 2px solid var(--color-border);
}

.article-share {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 2rem;
}

.share-label {
  font-size: 0.875rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
}

.share-buttons {
  display: flex;
  gap: 0.5rem;
}

.share-btn {
  width: 40px;
  height: 40px;
  border: 2px solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-text);
  text-decoration: none;
}

.share-btn:hover {
  background: var(--color-text);
  color: var(--color-bg);
}

.article-navigation {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem;
  margin-top: 2rem;
}

.article-nav-link {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  padding: 1.5rem;
  border: 2px solid var(--color-border);
  text-decoration: none;
  color: var(--color-text);
}

.article-nav-link:hover {
  border-color: #666;
}

.article-nav-next {
  text-align: right;
}

.nav-label {
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  color: var(--color-muted);
}

.nav-title {
  font-size: 0.9rem;
  font-weight: 500;
}

.article-comments-section {
  padding: 3rem 0;
}

.comments-title {
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  margin: 0 0 2rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid var(--color-border);
}

.comments-list {
  margin-bottom: 3rem;
}

.comment {
  padding: 1.5rem;
  margin-bottom: 1rem;
  border: 1px solid var(--color-border);
  background: #f5f5f5;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 0.75rem;
  font-size: 0.875rem;
}

.comment-author {
  font-weight: 700;
}

.comment-date {
  color: var(--color-muted);
}

.comment-content {
  font-size: 0.9rem;
  line-height: 1.7;
}

.comment-form-wrapper {
  padding: 2rem;
  border: 2px solid var(--color-border);
}

.comment-form-title {
  font-size: 0.875rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  margin: 0 0 1.5rem;
}

.form-success,
.form-errors {
  padding: 1rem;
  margin-bottom: 1.5rem;
  border: 2px solid var(--color-border);
}

.form-success {
  background: #e5ffe5;
  border-color: #00aa00;
}

.form-errors {
  background: #ffe5e5;
  border-color: #d20000;
}

.form-row {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
}

.form-field {
  margin-bottom: 1rem;
}

.form-field label {
  display: block;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  margin-bottom: 0.5rem;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 0.75rem;
  border: 2px solid var(--color-border);
  font-family: var(--font-sans);
  font-size: 0.9rem;
}

.form-textarea {
  min-height: 120px;
  resize: vertical;
}

.btn-submit {
  padding: 0.75rem 1.5rem;
  background: var(--color-text);
  color: var(--color-bg);
  border: 2px solid var(--color-text);
  font-size: 0.875rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  cursor: pointer;
}

.btn-submit:hover {
  background: transparent;
  color: var(--color-text);
}

.related-articles {
  padding: 3rem 0;
  border-top: 2px solid var(--color-border);
}

.related-title {
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  margin: 0 0 2rem;
}

.related-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
}

.related-article-card {
  border: 2px solid var(--color-border);
  text-decoration: none;
  color: var(--color-text);
  display: flex;
  flex-direction: column;
}

.related-article-card:hover {
  border-color: #666;
}

.related-article-image {
  aspect-ratio: 16 / 10;
  overflow: hidden;
  background: #f5f5f5;
}

.related-article-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.related-article-content {
  padding: 1.5rem;
}

.related-article-content h3 {
  font-size: 0.9rem;
  font-weight: 500;
  margin: 0 0 0.5rem;
}

.related-article-date {
  font-size: 0.75rem;
  color: var(--color-muted);
}

@media (max-width: 768px) {
  .article-page {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .article-title {
    font-size: 1.5rem;
  }

  .article-meta {
    flex-direction: column;
    gap: 0.5rem;
  }

  .article-navigation {
    grid-template-columns: 1fr;
  }

  .article-nav-next {
    text-align: left;
  }

  .form-row {
    grid-template-columns: 1fr;
  }

  .related-grid {
    grid-template-columns: 1fr;
  }
}
</style>
