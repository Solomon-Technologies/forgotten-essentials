{% comment %}
  Customer Account Page - Grunge Style
{% endcomment %}

<main class="account-page">
  <div class="account-container">
    <div class="account-header">
      <h1>My Account</h1>
      <a href="{{ routes.account_logout_url }}" class="logout-btn">Sign Out</a>
    </div>

    <div class="account-grid">
      <!-- Account Details -->
      <section class="account-section account-details">
        <h2>Account Details</h2>
        <div class="details-card">
          <div class="detail-row">
            <span class="detail-label">Name</span>
            <span class="detail-value">{{ customer.name }}</span>
          </div>
          <div class="detail-row">
            <span class="detail-label">Email</span>
            <span class="detail-value">{{ customer.email }}</span>
          </div>
          {% if customer.default_address %}
            <div class="detail-row">
              <span class="detail-label">Default Address</span>
              <span class="detail-value">
                {{ customer.default_address.city }}, {{ customer.default_address.province_code }}
              </span>
            </div>
          {% endif %}
        </div>
        <a href="{{ routes.account_addresses_url }}" class="edit-link">Manage Addresses</a>
      </section>

      <!-- Saved Items Preview -->
      <section class="account-section account-wishlist-preview">
        <div class="section-header">
          <h2>Saved Items</h2>
          <a href="/pages/wishlist" class="view-all-link">View All</a>
        </div>
        <p class="empty-message">
          Visit our <a href="{{ routes.all_products_collection_url }}">shop</a> to save items you love.
        </p>
      </section>

      <!-- Order History -->
      <section class="account-section account-orders">
        <div class="section-header">
          <h2>Order History</h2>
        </div>
        {% paginate customer.orders by 5 %}
          {% if customer.orders.size > 0 %}
            <div class="orders-list">
              {% for order in customer.orders %}
                <div class="order-card">
                  <div class="order-header">
                    <a href="{{ order.customer_url }}" class="order-id">Order {{ order.name }}</a>
                    <span class="order-status status-{{ order.fulfillment_status | default: 'unfulfilled' | handleize }}">
                      {{ order.fulfillment_status_label | default: 'Unfulfilled' }}
                    </span>
                  </div>
                  <div class="order-details">
                    <span class="order-date">{{ order.created_at | date: "%B %d, %Y" }}</span>
                    <span class="order-items">{{ order.line_items.size }} item{% if order.line_items.size > 1 %}s{% endif %}</span>
                    <span class="order-total">{{ order.total_price | money }}</span>
                  </div>
                </div>
              {% endfor %}
            </div>

            {% if paginate.pages > 1 %}
              <div class="pagination">
                {{ paginate | default_pagination }}
              </div>
            {% endif %}
          {% else %}
            <p class="empty-message">
              No orders yet. <a href="{{ routes.all_products_collection_url }}">Start shopping</a>
            </p>
          {% endif %}
        {% endpaginate %}
      </section>
    </div>
  </div>
</main>

<style>
.account-page {
  min-height: 100vh;
  padding: 120px 20px 80px;
  background: var(--color-cream, #f5f0e8);
}

.account-container {
  max-width: 1000px;
  margin: 0 auto;
}

.account-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48px;
  padding-bottom: 24px;
  border-bottom: 2px solid var(--color-ink, #1a1a1a);
}

.account-header h1 {
  font-family: var(--font-heading-family);
  font-size: 2.5rem;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: -0.02em;
}

.logout-btn {
  padding: 12px 24px;
  font-size: 0.9rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  background: transparent;
  color: var(--color-ink, #1a1a1a);
  border: 2px solid var(--color-ink, #1a1a1a);
  text-decoration: none;
  transition: all 0.2s ease;
}

.logout-btn:hover {
  background: var(--color-ink, #1a1a1a);
  color: var(--color-cream, #f5f0e8);
}

.account-grid {
  display: grid;
  gap: 32px;
}

.account-section {
  background: var(--color-paper, #fff);
  padding: 32px;
  border: 2px solid var(--color-ink, #1a1a1a);
}

.account-section h2 {
  font-family: var(--font-heading-family);
  font-size: 1.5rem;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: -0.01em;
  margin-bottom: 24px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
}

.section-header h2 {
  margin-bottom: 0;
}

.view-all-link,
.edit-link {
  font-size: 0.9rem;
  font-weight: 700;
  color: var(--color-ink, #1a1a1a);
  text-decoration: underline;
}

.view-all-link:hover,
.edit-link:hover {
  text-decoration: none;
}

/* Account Details */
.details-card {
  display: flex;
  flex-direction: column;
  gap: 16px;
  margin-bottom: 24px;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.detail-row:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.detail-label {
  font-weight: 700;
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--color-muted, #666);
}

.detail-value {
  font-size: 1rem;
}

/* Orders */
.orders-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.order-card {
  padding: 20px;
  background: var(--color-cream, #f5f0e8);
  border: 2px solid var(--color-ink, #1a1a1a);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.order-id {
  font-weight: 700;
  font-size: 1rem;
  color: var(--color-ink, #1a1a1a);
  text-decoration: none;
}

.order-id:hover {
  text-decoration: underline;
}

.order-status {
  padding: 4px 12px;
  font-size: 0.8rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.status-fulfilled {
  background: #dcfce7;
  color: #166534;
}

.status-unfulfilled {
  background: #fef3c7;
  color: #92400e;
}

.status-partial {
  background: #dbeafe;
  color: #1e40af;
}

.order-details {
  display: flex;
  gap: 24px;
  font-size: 0.9rem;
  color: var(--color-muted, #666);
}

.order-total {
  font-weight: 700;
  color: var(--color-ink, #1a1a1a);
}

/* Empty State */
.empty-message {
  color: var(--color-muted, #666);
  font-size: 0.95rem;
}

.empty-message a {
  color: var(--color-ink, #1a1a1a);
  font-weight: 700;
  text-decoration: underline;
}

.empty-message a:hover {
  text-decoration: none;
}

/* Pagination */
.pagination {
  margin-top: 24px;
  text-align: center;
}

@media (max-width: 768px) {
  .account-page {
    padding: 100px 16px 60px;
  }

  .account-header {
    flex-direction: column;
    gap: 16px;
    align-items: flex-start;
  }

  .account-header h1 {
    font-size: 2rem;
  }

  .account-section {
    padding: 24px;
  }

  .order-details {
    flex-direction: column;
    gap: 8px;
  }
}
</style>
