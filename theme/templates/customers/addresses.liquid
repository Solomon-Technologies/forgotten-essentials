{% comment %}
  Customer Addresses Page - Grunge Style
{% endcomment %}

<main class="addresses-page">
  <div class="addresses-container">
    <div class="addresses-header">
      <h1>My Addresses</h1>
      <a href="{{ routes.account_url }}" class="back-link">Back to Account</a>
    </div>

    <!-- Add New Address Form -->
    <section class="account-section add-address-section">
      <button class="add-address-btn" data-toggle-new-address>
        + Add New Address
      </button>

      <div class="new-address-form" style="display: none;" data-new-address-form>
        <h2>Add New Address</h2>
        {% form 'customer_address', customer.new_address, class: 'address-form' %}
          <div class="form-row">
            <div class="form-group">
              <label for="AddressFirstName">First Name</label>
              <input type="text" name="address[first_name]" id="AddressFirstName" value="{{ form.first_name }}" autocomplete="given-name">
            </div>
            <div class="form-group">
              <label for="AddressLastName">Last Name</label>
              <input type="text" name="address[last_name]" id="AddressLastName" value="{{ form.last_name }}" autocomplete="family-name">
            </div>
          </div>

          <div class="form-group">
            <label for="AddressCompany">Company</label>
            <input type="text" name="address[company]" id="AddressCompany" value="{{ form.company }}" autocomplete="organization">
          </div>

          <div class="form-group">
            <label for="AddressAddress1">Address</label>
            <input type="text" name="address[address1]" id="AddressAddress1" value="{{ form.address1 }}" autocomplete="address-line1">
          </div>

          <div class="form-group">
            <label for="AddressAddress2">Apartment, suite, etc.</label>
            <input type="text" name="address[address2]" id="AddressAddress2" value="{{ form.address2 }}" autocomplete="address-line2">
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="AddressCity">City</label>
              <input type="text" name="address[city]" id="AddressCity" value="{{ form.city }}" autocomplete="address-level2">
            </div>
            <div class="form-group">
              <label for="AddressCountry">Country/Region</label>
              <select name="address[country]" id="AddressCountry" data-default="{{ form.country }}">
                {{ all_country_option_tags }}
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="AddressProvince">State/Province</label>
              <select name="address[province]" id="AddressProvince" data-default="{{ form.province }}"></select>
            </div>
            <div class="form-group">
              <label for="AddressZip">Postal/Zip Code</label>
              <input type="text" name="address[zip]" id="AddressZip" value="{{ form.zip }}" autocomplete="postal-code">
            </div>
          </div>

          <div class="form-group">
            <label for="AddressPhone">Phone</label>
            <input type="tel" name="address[phone]" id="AddressPhone" value="{{ form.phone }}" autocomplete="tel">
          </div>

          <div class="form-group checkbox-group">
            <input type="checkbox" name="address[default]" id="AddressDefault" value="1">
            <label for="AddressDefault">Set as default address</label>
          </div>

          <div class="form-actions">
            <button type="submit" class="save-btn">Save Address</button>
            <button type="button" class="cancel-btn" data-cancel-new-address>Cancel</button>
          </div>
        {% endform %}
      </div>
    </section>

    <!-- Existing Addresses -->
    {% if customer.addresses.size > 0 %}
      <section class="account-section addresses-list">
        <h2>Saved Addresses</h2>
        <div class="addresses-grid">
          {% for address in customer.addresses %}
            <div class="address-card {% if address == customer.default_address %}default-address{% endif %}">
              {% if address == customer.default_address %}
                <span class="default-badge">Default</span>
              {% endif %}
              <p class="address-name">{{ address.first_name }} {{ address.last_name }}</p>
              {% if address.company != blank %}
                <p>{{ address.company }}</p>
              {% endif %}
              <p>{{ address.address1 }}</p>
              {% if address.address2 != blank %}
                <p>{{ address.address2 }}</p>
              {% endif %}
              <p>{{ address.city }}, {{ address.province_code }} {{ address.zip }}</p>
              <p>{{ address.country }}</p>
              {% if address.phone != blank %}
                <p>{{ address.phone }}</p>
              {% endif %}

              <div class="address-actions">
                <a href="{{ routes.account_addresses_url }}/{{ address.id }}" class="edit-btn">Edit</a>
                {% form 'customer_address', address %}
                  <input type="hidden" name="_method" value="delete">
                  <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this address?');">Delete</button>
                {% endform %}
              </div>
            </div>
          {% endfor %}
        </div>
      </section>
    {% endif %}
  </div>
</main>

<style>
.addresses-page {
  min-height: 100vh;
  padding: 120px 20px 80px;
  background: var(--color-cream, #f5f0e8);
}

.addresses-container {
  max-width: 900px;
  margin: 0 auto;
}

.addresses-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48px;
  padding-bottom: 24px;
  border-bottom: 2px solid var(--color-ink, #1a1a1a);
}

.addresses-header h1 {
  font-family: var(--font-heading-family);
  font-size: 2.5rem;
  font-weight: 900;
  text-transform: uppercase;
}

.back-link {
  font-weight: 700;
  color: var(--color-ink, #1a1a1a);
  text-decoration: underline;
}

.account-section {
  background: var(--color-paper, #fff);
  padding: 32px;
  border: 2px solid var(--color-ink, #1a1a1a);
  margin-bottom: 32px;
}

.account-section h2 {
  font-family: var(--font-heading-family);
  font-size: 1.5rem;
  font-weight: 900;
  text-transform: uppercase;
  margin-bottom: 24px;
}

.add-address-btn {
  width: 100%;
  padding: 16px;
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  background: transparent;
  color: var(--color-ink, #1a1a1a);
  border: 2px dashed var(--color-ink, #1a1a1a);
  cursor: pointer;
  transition: all 0.2s ease;
}

.add-address-btn:hover {
  background: var(--color-cream, #f5f0e8);
}

.address-form {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-top: 24px;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-group label {
  font-weight: 700;
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.form-group input,
.form-group select {
  padding: 14px 16px;
  font-size: 1rem;
  border: 2px solid var(--color-ink, #1a1a1a);
  background: var(--color-cream, #f5f0e8);
  font-family: inherit;
}

.form-group input:focus,
.form-group select:focus {
  outline: none;
  box-shadow: 4px 4px 0 var(--color-ink, #1a1a1a);
}

.checkbox-group {
  flex-direction: row;
  align-items: center;
}

.checkbox-group input {
  width: 20px;
  height: 20px;
}

.form-actions {
  display: flex;
  gap: 16px;
  margin-top: 8px;
}

.save-btn {
  padding: 14px 24px;
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  background: var(--color-ink, #1a1a1a);
  color: var(--color-cream, #f5f0e8);
  border: 2px solid var(--color-ink, #1a1a1a);
  cursor: pointer;
  transition: all 0.2s ease;
}

.save-btn:hover {
  background: var(--color-cream, #f5f0e8);
  color: var(--color-ink, #1a1a1a);
}

.cancel-btn {
  padding: 14px 24px;
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  background: transparent;
  color: var(--color-ink, #1a1a1a);
  border: 2px solid var(--color-ink, #1a1a1a);
  cursor: pointer;
  transition: all 0.2s ease;
}

.cancel-btn:hover {
  background: var(--color-cream, #f5f0e8);
}

/* Addresses Grid */
.addresses-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24px;
}

.address-card {
  padding: 24px;
  background: var(--color-cream, #f5f0e8);
  border: 2px solid var(--color-ink, #1a1a1a);
  position: relative;
}

.address-card.default-address {
  border-width: 3px;
}

.default-badge {
  position: absolute;
  top: -1px;
  right: -1px;
  background: var(--color-ink, #1a1a1a);
  color: var(--color-cream, #f5f0e8);
  padding: 4px 12px;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.address-card p {
  margin: 0 0 4px;
  font-size: 0.95rem;
}

.address-name {
  font-weight: 700;
  margin-bottom: 8px !important;
}

.address-actions {
  display: flex;
  gap: 12px;
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid rgba(0,0,0,0.1);
}

.edit-btn,
.delete-btn {
  font-size: 0.85rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  text-decoration: underline;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
}

.edit-btn {
  color: var(--color-ink, #1a1a1a);
}

.delete-btn {
  color: #b91c1c;
}

@media (max-width: 768px) {
  .addresses-header {
    flex-direction: column;
    gap: 16px;
    align-items: flex-start;
  }

  .form-row {
    grid-template-columns: 1fr;
  }

  .addresses-grid {
    grid-template-columns: 1fr;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const toggleBtn = document.querySelector('[data-toggle-new-address]');
  const cancelBtn = document.querySelector('[data-cancel-new-address]');
  const formContainer = document.querySelector('[data-new-address-form]');

  if (toggleBtn && formContainer) {
    toggleBtn.addEventListener('click', function() {
      toggleBtn.style.display = 'none';
      formContainer.style.display = 'block';
    });
  }

  if (cancelBtn && formContainer && toggleBtn) {
    cancelBtn.addEventListener('click', function() {
      formContainer.style.display = 'none';
      toggleBtn.style.display = 'block';
    });
  }

  // Country/Province selector
  const countrySelect = document.getElementById('AddressCountry');
  const provinceSelect = document.getElementById('AddressProvince');

  if (countrySelect && provinceSelect) {
    countrySelect.addEventListener('change', function() {
      // This requires Shopify's country_option_tags to work properly
      // The provinces will be populated via Shopify's JS
    });
  }
});
</script>
