{% comment %}
  Cart Template - Full Page Cart
  Displays cart items, totals, and checkout button
{% endcomment %}

<main class="cart-page">
  <div class="cart-header">
    <h1>Shopping Cart</h1>
    {% if cart.item_count > 0 %}
      <p>{{ cart.item_count }} {% if cart.item_count == 1 %}item{% else %}items{% endif %}</p>
    {% endif %}
  </div>

  {% if cart.item_count > 0 %}
    <div class="cart-container">
      <!-- Cart Items -->
      <div class="cart-items">
        <div class="cart-items-header">
          <div class="cart-col-product">Product</div>
          <div class="cart-col-price">Price</div>
          <div class="cart-col-quantity">Quantity</div>
          <div class="cart-col-total">Total</div>
        </div>

        <div class="cart-items-list">
          {% for item in cart.items %}
            <div class="cart-item" data-cart-item="{{ item.key }}">
              <div class="cart-item-product">
                <div class="cart-item-image">
                  {% if item.image %}
                    <img
                      src="{{ item.image | img_url: 'medium' }}"
                      alt="{{ item.title | escape }}"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="cart-item-image-placeholder"></div>
                  {% endif %}
                </div>
                <div class="cart-item-details">
                  <a href="{{ item.url }}" class="cart-item-title">{{ item.product.title }}</a>
                  {% if item.variant.title != 'Default Title' %}
                    <div class="cart-item-variant">{{ item.variant.title }}</div>
                  {% endif %}
                  {% if item.properties %}
                    <div class="cart-item-properties">
                      {% for property in item.properties %}
                        {% unless property.first contains '_' %}
                          <div class="cart-item-property">
                            <span class="property-label">{{ property.first }}:</span>
                            <span class="property-value">{{ property.last }}</span>
                          </div>
                        {% endunless %}
                      {% endfor %}
                    </div>
                  {% endif %}
                  <button
                    class="cart-item-remove"
                    data-cart-remove="{{ item.key }}"
                  >
                    Remove
                  </button>
                </div>
              </div>

              <div class="cart-item-price">
                {% if item.original_price > item.final_price %}
                  <span class="cart-item-price-original">{{ item.original_price | money_without_trailing_zeros }}</span>
                  <span class="cart-item-price-final">{{ item.final_price | money_without_trailing_zeros }}</span>
                {% else %}
                  {{ item.final_price | money_without_trailing_zeros }}
                {% endif %}
              </div>

              <div class="cart-item-quantity">
                <div class="quantity-selector">
                  <button
                    class="quantity-btn"
                    data-cart-decrease="{{ item.key }}"
                    data-quantity="{{ item.quantity }}"
                    {% if item.quantity <= 1 %}disabled{% endif %}
                  >
                    -
                  </button>
                  <input
                    type="number"
                    class="quantity-input"
                    value="{{ item.quantity }}"
                    min="0"
                    data-cart-quantity="{{ item.key }}"
                    data-line="{{ forloop.index }}"
                  >
                  <button
                    class="quantity-btn"
                    data-cart-increase="{{ item.key }}"
                    data-quantity="{{ item.quantity }}"
                  >
                    +
                  </button>
                </div>
              </div>

              <div class="cart-item-total">
                {{ item.final_line_price | money_without_trailing_zeros }}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      <!-- Cart Summary -->
      <div class="cart-summary">
        <h2>Order Summary</h2>

        <div class="cart-summary-row">
          <span>Subtotal</span>
          <span>{{ cart.total_price | money_without_trailing_zeros }}</span>
        </div>

        {% if cart.cart_level_discount_applications.size > 0 %}
          <div class="cart-discounts">
            {% for discount in cart.cart_level_discount_applications %}
              <div class="cart-discount">
                <span>{{ discount.title }}</span>
                <span>-{{ discount.total_allocated_amount | money_without_trailing_zeros }}</span>
              </div>
            {% endfor %}
          </div>
        {% endif %}

        <div class="cart-summary-note">
          <p>Shipping and taxes calculated at checkout</p>
        </div>

        <!-- Cart Note -->
        <div class="cart-note-wrapper">
          <label for="cart-note" class="cart-note-label">Order Notes</label>
          <textarea
            id="cart-note"
            name="note"
            class="cart-note-textarea"
            placeholder="Special instructions or gift message..."
            data-cart-note
          >{{ cart.note }}</textarea>
        </div>

        <!-- Checkout Button -->
        <button
          type="button"
          class="btn-checkout"
          onclick="window.location.href='/checkout'"
        >
          Proceed to Checkout
        </button>

        <!-- Continue Shopping -->
        <a href="/collections/all" class="continue-shopping">
          Continue Shopping
        </a>

        <!-- Perks -->
        <div class="cart-perks">
          <div class="perk">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M21 10V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16v-2"/>
            </svg>
            <span>Free shipping over $200</span>
          </div>
          <div class="perk">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/>
              <path d="M3 3v5h5"/>
            </svg>
            <span>14-day returns</span>
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <!-- Empty Cart -->
    <div class="cart-empty">
      <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
        <circle cx="8" cy="21" r="1"/>
        <circle cx="19" cy="21" r="1"/>
        <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/>
      </svg>
      <h2>Your cart is empty</h2>
      <p>Looks like you haven't added anything to your cart yet.</p>
      <a href="/collections/all" class="btn-primary">
        Start Shopping
      </a>
    </div>
  {% endif %}
</main>

<style>
.cart-page {
  padding-top: 60px;
  min-height: 100vh;
  max-width: 1400px;
  margin: 0 auto;
  padding-left: 2rem;
  padding-right: 2rem;
}

.cart-header {
  text-align: center;
  padding: 3rem 0 2rem;
  border-bottom: 2px solid var(--color-border);
}

.cart-header h1 {
  font-size: 1rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  margin: 0 0 0.5rem;
}

.cart-header p {
  font-size: 0.875rem;
  color: var(--color-muted);
  margin: 0;
}

.cart-container {
  display: grid;
  grid-template-columns: 1fr 400px;
  gap: 3rem;
  padding: 3rem 0;
}

.cart-items {
  border: 2px solid var(--color-border);
}

.cart-items-header {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1fr;
  gap: 1rem;
  padding: 1rem 1.5rem;
  background: #f5f5f5;
  border-bottom: 2px solid var(--color-border);
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
}

.cart-items-list {
  padding: 1rem;
}

.cart-item {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1fr;
  gap: 1rem;
  padding: 1.5rem 0.5rem;
  border-bottom: 1px solid var(--color-border);
  align-items: center;
}

.cart-item:last-child {
  border-bottom: none;
}

.cart-item-product {
  display: flex;
  gap: 1rem;
}

.cart-item-image {
  width: 100px;
  height: 130px;
  flex-shrink: 0;
  background: #f5f5f5;
  overflow: hidden;
}

.cart-item-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cart-item-image-placeholder {
  width: 100%;
  height: 100%;
  background: #e5e5e5;
}

.cart-item-details {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.cart-item-title {
  font-size: 0.9rem;
  font-weight: 500;
  color: var(--color-text);
  text-decoration: none;
}

.cart-item-title:hover {
  text-decoration: underline;
}

.cart-item-variant,
.cart-item-property {
  font-size: 0.8rem;
  color: var(--color-muted);
}

.cart-item-remove {
  background: none;
  border: none;
  padding: 0;
  font-size: 0.75rem;
  text-transform: uppercase;
  font-weight: 700;
  color: var(--color-muted);
  cursor: pointer;
  text-align: left;
}

.cart-item-remove:hover {
  color: var(--color-accent);
  text-decoration: underline;
}

.cart-item-price {
  font-size: 0.9rem;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.cart-item-price-original {
  text-decoration: line-through;
  color: var(--color-muted);
  font-size: 0.8rem;
}

.cart-item-price-final {
  font-weight: 500;
}

.quantity-selector {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  border: 1px solid var(--color-border);
  width: fit-content;
}

.quantity-btn {
  width: 32px;
  height: 32px;
  background: none;
  border: none;
  cursor: pointer;
  font-size: 1rem;
  font-weight: 700;
}

.quantity-btn:hover:not(:disabled) {
  background: #f5f5f5;
}

.quantity-btn:disabled {
  opacity: 0.3;
  cursor: not-allowed;
}

.quantity-input {
  width: 50px;
  height: 32px;
  border: none;
  border-left: 1px solid var(--color-border);
  border-right: 1px solid var(--color-border);
  text-align: center;
  font-size: 0.875rem;
  font-family: var(--font-sans);
}

.quantity-input::-webkit-inner-spin-button,
.quantity-input::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.cart-item-total {
  font-size: 0.9rem;
  font-weight: 700;
  text-align: right;
}

.cart-summary {
  position: sticky;
  top: 80px;
  height: fit-content;
  border: 2px solid var(--color-border);
  padding: 2rem;
}

.cart-summary h2 {
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  margin: 0 0 1.5rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid var(--color-border);
}

.cart-summary-row {
  display: flex;
  justify-content: space-between;
  padding: 0.75rem 0;
  font-size: 0.9rem;
}

.cart-summary-row:last-of-type {
  font-size: 1.1rem;
  font-weight: 700;
  padding-top: 1rem;
  border-top: 1px solid var(--color-border);
}

.cart-discounts {
  padding: 0.5rem 0;
  border-top: 1px solid var(--color-border);
}

.cart-discount {
  display: flex;
  justify-content: space-between;
  padding: 0.5rem 0;
  font-size: 0.875rem;
  color: var(--color-accent);
}

.cart-summary-note {
  padding: 1rem 0;
  font-size: 0.75rem;
  color: var(--color-muted);
  text-align: center;
}

.cart-summary-note p {
  margin: 0;
}

.cart-note-wrapper {
  margin: 1.5rem 0;
}

.cart-note-label {
  display: block;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  margin-bottom: 0.5rem;
}

.cart-note-textarea {
  width: 100%;
  min-height: 80px;
  padding: 0.75rem;
  border: 1px solid var(--color-border);
  font-family: var(--font-sans);
  font-size: 0.875rem;
  resize: vertical;
}

.btn-checkout {
  width: 100%;
  padding: 1rem;
  background: var(--color-text);
  color: var(--color-bg);
  border: 2px solid var(--color-text);
  font-size: 0.875rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  cursor: pointer;
  margin-bottom: 1rem;
}

.btn-checkout:hover {
  background: transparent;
  color: var(--color-text);
}

.continue-shopping {
  display: block;
  text-align: center;
  padding: 0.75rem;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  color: var(--color-text);
  text-decoration: none;
  border: 2px solid var(--color-text);
}

.continue-shopping:hover {
  background: #f5f5f5;
}

.cart-perks {
  margin-top: 2rem;
  padding-top: 2rem;
  border-top: 1px solid var(--color-border);
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.perk {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-size: 0.8rem;
  color: var(--color-muted);
}

.perk svg {
  flex-shrink: 0;
}

.cart-empty {
  text-align: center;
  padding: 6rem 2rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.5rem;
}

.cart-empty svg {
  stroke: var(--color-muted);
}

.cart-empty h2 {
  font-size: 1.5rem;
  font-weight: 400;
  margin: 0;
}

.cart-empty p {
  font-size: 0.9rem;
  color: var(--color-muted);
  margin: 0;
}

@media (max-width: 1024px) {
  .cart-container {
    grid-template-columns: 1fr;
  }

  .cart-summary {
    position: static;
  }
}

@media (max-width: 768px) {
  .cart-page {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .cart-items-header {
    display: none;
  }

  .cart-items-list {
    padding: 0.5rem;
  }

  .cart-item {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .cart-item-price,
  .cart-item-total {
    font-size: 1rem;
  }

  .cart-item-total {
    text-align: left;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Quantity decrease
  document.querySelectorAll('[data-cart-decrease]').forEach(btn => {
    btn.addEventListener('click', function() {
      const key = this.getAttribute('data-cart-decrease');
      const currentQty = parseInt(this.getAttribute('data-quantity'));
      if (currentQty > 1) {
        updateCartItem(key, currentQty - 1);
      }
    });
  });

  // Quantity increase
  document.querySelectorAll('[data-cart-increase]').forEach(btn => {
    btn.addEventListener('click', function() {
      const key = this.getAttribute('data-cart-increase');
      const currentQty = parseInt(this.getAttribute('data-quantity'));
      updateCartItem(key, currentQty + 1);
    });
  });

  // Quantity input change
  document.querySelectorAll('[data-cart-quantity]').forEach(input => {
    input.addEventListener('change', function() {
      const key = this.getAttribute('data-cart-quantity');
      const newQty = parseInt(this.value);
      if (newQty >= 0) {
        updateCartItem(key, newQty);
      }
    });
  });

  // Remove item
  document.querySelectorAll('[data-cart-remove]').forEach(btn => {
    btn.addEventListener('click', function() {
      const key = this.getAttribute('data-cart-remove');
      updateCartItem(key, 0);
    });
  });

  // Cart note
  const cartNoteTextarea = document.querySelector('[data-cart-note]');
  if (cartNoteTextarea) {
    let noteTimeout;
    cartNoteTextarea.addEventListener('input', function() {
      clearTimeout(noteTimeout);
      noteTimeout = setTimeout(() => {
        updateCartNote(this.value);
      }, 1000);
    });
  }

  function updateCartItem(key, quantity) {
    fetch('/cart/change.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        id: key,
        quantity: quantity
      })
    })
    .then(response => response.json())
    .then(data => {
      window.location.reload();
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Unable to update cart. Please try again.');
    });
  }

  function updateCartNote(note) {
    fetch('/cart/update.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        note: note
      })
    })
    .then(response => response.json())
    .catch(error => {
      console.error('Error:', error);
    });
  }
});
</script>
