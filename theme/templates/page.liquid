{% comment %}
  Page Template - Generic Content Page
  For About, Contact, and other custom pages
{% endcomment %}

<main class="page-template">
  <div class="page-header">
    <nav class="breadcrumb">
      <a href="/">Home</a>
      <span>/</span>
      <span>{{ page.title }}</span>
    </nav>
    <h1>{{ page.title }}</h1>
  </div>

  <div class="page-content">
    <article class="page-article">
      {% if page.content != blank %}
        <div class="rte">
          {{ page.content }}
        </div>
      {% else %}
        <p>This page is currently empty.</p>
      {% endif %}
    </article>
  </div>
</main>

<style>
.page-template {
  padding-top: 60px;
  min-height: 100vh;
  max-width: 1200px;
  margin: 0 auto;
  padding-left: 2rem;
  padding-right: 2rem;
}

.page-header {
  padding: 3rem 0 2rem;
  border-bottom: 2px solid var(--color-border);
}

.breadcrumb {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding-bottom: 1.5rem;
  font-size: 0.75rem;
}

.breadcrumb a {
  color: var(--color-muted);
  text-decoration: none;
  transition: color 0.2s ease;
}

.breadcrumb a:hover {
  color: var(--color-text);
}

.breadcrumb span {
  color: var(--color-muted);
}

.breadcrumb span:last-child {
  color: var(--color-text);
  font-weight: 700;
}

.page-header h1 {
  font-size: 1.5rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  margin: 0;
}

.page-content {
  padding: 3rem 0;
  max-width: 800px;
  margin: 0 auto;
}

.page-article {
  line-height: 1.8;
}

/* Rich Text Editor Styles */
.rte {
  font-size: 0.9rem;
  color: var(--color-text);
}

.rte h1,
.rte h2,
.rte h3,
.rte h4,
.rte h5,
.rte h6 {
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0;
  margin: 2rem 0 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 2px solid var(--color-border);
}

.rte h1 {
  font-size: 1.5rem;
}

.rte h2 {
  font-size: 1.25rem;
}

.rte h3 {
  font-size: 1.1rem;
}

.rte h4,
.rte h5,
.rte h6 {
  font-size: 1rem;
}

.rte p {
  margin: 0 0 1.5rem;
  line-height: 1.8;
}

.rte a {
  color: var(--color-text);
  text-decoration: underline;
  font-weight: 500;
}

.rte a:hover {
  text-decoration: none;
}

.rte ul,
.rte ol {
  margin: 0 0 1.5rem;
  padding-left: 2rem;
}

.rte li {
  margin-bottom: 0.5rem;
}

.rte ul li {
  list-style-type: disc;
}

.rte ol li {
  list-style-type: decimal;
}

.rte blockquote {
  margin: 2rem 0;
  padding: 1.5rem 2rem;
  border-left: 4px solid var(--color-border);
  background: #f5f5f5;
  font-style: italic;
  color: var(--color-muted);
}

.rte blockquote p:last-child {
  margin-bottom: 0;
}

.rte img {
  max-width: 100%;
  height: auto;
  margin: 2rem 0;
  border: 2px solid var(--color-border);
}

.rte table {
  width: 100%;
  margin: 2rem 0;
  border-collapse: collapse;
  border: 2px solid var(--color-border);
}

.rte table th,
.rte table td {
  padding: 0.75rem 1rem;
  border: 1px solid var(--color-border);
  text-align: left;
}

.rte table th {
  background: #f5f5f5;
  font-weight: 700;
  text-transform: uppercase;
  font-size: 0.75rem;
  letter-spacing: 0;
}

.rte hr {
  margin: 3rem 0;
  border: none;
  border-top: 2px solid var(--color-border);
}

.rte code {
  padding: 0.2rem 0.5rem;
  background: #f5f5f5;
  border: 1px solid var(--color-border);
  font-family: 'Courier New', monospace;
  font-size: 0.85rem;
}

.rte pre {
  margin: 2rem 0;
  padding: 1.5rem;
  background: #f5f5f5;
  border: 2px solid var(--color-border);
  overflow-x: auto;
}

.rte pre code {
  padding: 0;
  background: none;
  border: none;
}

.rte iframe,
.rte video {
  max-width: 100%;
  margin: 2rem 0;
  border: 2px solid var(--color-border);
}

/* Button Styles in Content */
.rte .button,
.rte a.button {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  margin: 0.5rem 0;
  background: var(--color-text);
  color: var(--color-bg);
  border: 2px solid var(--color-text);
  font-size: 0.875rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.rte .button:hover,
.rte a.button:hover {
  background: transparent;
  color: var(--color-text);
}

/* Contact Form Styles (if applicable) */
.rte form {
  margin: 2rem 0;
}

.rte form input[type="text"],
.rte form input[type="email"],
.rte form input[type="tel"],
.rte form textarea,
.rte form select {
  width: 100%;
  padding: 0.75rem 1rem;
  margin-bottom: 1rem;
  border: 2px solid var(--color-border);
  font-family: var(--font-sans);
  font-size: 0.9rem;
}

.rte form textarea {
  min-height: 150px;
  resize: vertical;
}

.rte form input[type="submit"],
.rte form button[type="submit"] {
  padding: 0.75rem 1.5rem;
  background: var(--color-text);
  color: var(--color-bg);
  border: 2px solid var(--color-text);
  font-size: 0.875rem;
  font-weight: 700;
  letter-spacing: 0;
  text-transform: uppercase;
  cursor: pointer;
}

.rte form input[type="submit"]:hover,
.rte form button[type="submit"]:hover {
  background: transparent;
  color: var(--color-text);
}

@media (max-width: 768px) {
  .page-template {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .page-header {
    padding: 2rem 0 1.5rem;
  }

  .page-header h1 {
    font-size: 1.25rem;
  }

  .page-content {
    padding: 2rem 0;
  }

  .rte h1 {
    font-size: 1.25rem;
  }

  .rte h2 {
    font-size: 1.1rem;
  }

  .rte h3 {
    font-size: 1rem;
  }

  .rte blockquote {
    padding: 1rem 1.5rem;
  }

  .rte table {
    font-size: 0.85rem;
  }

  .rte table th,
  .rte table td {
    padding: 0.5rem 0.75rem;
  }
}

@media (max-width: 480px) {
  .breadcrumb {
    flex-wrap: wrap;
  }

  .rte ul,
  .rte ol {
    padding-left: 1.5rem;
  }
}
</style>
